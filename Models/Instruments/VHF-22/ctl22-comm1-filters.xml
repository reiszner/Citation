<PropertyList>

    <filter>
        <type>gain</type>
        <name>ctl22-comm1-power</name>
        <input>
            <condition>
                <greater-than>
                    <property>instrumentation/ctl22[1]/power-knob</property>
                    <value>0</value>
                </greater-than>
            </condition>
            <value>1</value>
        </input>
        <input>0</input>
        <output>instrumentation/comm[1]/power-btn</output>
    </filter>

    <filter>
        <type>gain</type>
        <name>ctl22-comm1-reset</name>
        <enable>
            <condition>
                <not><property>instrumentation/comm[1]/operable</property></not>
            </condition>
        </enable>
        <input>0</input>
        <output>
            <property>instrumentation/ctl22[1]/mode</property>
            <property>instrumentation/ctl22[1]/mem-mode</property>
            <property>instrumentation/ctl22[1]/mem-pos</property>
            <property>instrumentation/ctl22[1]/mem-run</property>
            <property>instrumentation/ctl22[1]/mem-khz[0]</property>
            <property>instrumentation/ctl22[1]/mem-mhz[0]</property>
            <property>instrumentation/ctl22[1]/mem-khz[1]</property>
            <property>instrumentation/ctl22[1]/mem-mhz[1]</property>
            <property>instrumentation/ctl22[1]/mem-khz[2]</property>
            <property>instrumentation/ctl22[1]/mem-mhz[2]</property>
            <property>instrumentation/ctl22[1]/mem-khz[3]</property>
            <property>instrumentation/ctl22[1]/mem-mhz[3]</property>
            <property>instrumentation/ctl22[1]/mem-khz[4]</property>
            <property>instrumentation/ctl22[1]/mem-mhz[4]</property>
            <property>instrumentation/ctl22[1]/mem-khz[5]</property>
            <property>instrumentation/ctl22[1]/mem-mhz[5]</property>
            <property>instrumentation/ctl22[1]/standby-mhz</property>
            <property>instrumentation/ctl22[1]/standby-khz</property>
            <property>instrumentation/ctl22[1]/standby-trigger</property>
            <property>instrumentation/ctl22[1]/selected-mhz</property>
            <property>instrumentation/ctl22[1]/selected-khz</property>
            <property>instrumentation/ctl22[1]/selected-trigger</property>
        </output>
    </filter>

    <filter>
        <type>gain</type>
        <name>ctl22-comm1-standby-mhz</name>
        <enable>
            <condition>
                <property>instrumentation/comm[1]/operable</property>
                <not><property>instrumentation/ctl22[1]/new-radio</property></not>
                <less-than>
                    <property>instrumentation/ctl22[1]/standby-mhz</property>
                    <value>118</value>
                </less-than>
            </condition>
        </enable>
        <input>118</input>
        <output>
            <property>instrumentation/ctl22[1]/standby-mhz</property>
            <property>instrumentation/ctl22[1]/mem-mhz[0]</property>
            <property>instrumentation/ctl22[1]/mem-mhz[1]</property>
            <property>instrumentation/ctl22[1]/mem-mhz[2]</property>
            <property>instrumentation/ctl22[1]/mem-mhz[3]</property>
            <property>instrumentation/ctl22[1]/mem-mhz[4]</property>
            <property>instrumentation/ctl22[1]/mem-mhz[5]</property>
        </output>
    </filter>

    <filter>
        <type>gain</type>
        <name>ctl22-comm1-standby</name>
        <enable>
            <condition>
                <property>instrumentation/comm[1]/operable</property>
            </condition>
        </enable>
        <input>
            <condition>
                <not><property>instrumentation/ctl22[1]/new-radio</property></not>
            </condition>
            <expression>
                <sum>
                    <product>
                        <property>instrumentation/ctl22[1]/standby-mhz</property>
                        <value>1000</value>
                    </product>
                    <property>instrumentation/ctl22[1]/standby-khz</property>
                </sum>
            </expression>
        </input>
        <input>
            <condition>
                <property>instrumentation/ctl22[1]/new-radio</property>
            </condition>
            <expression>
                <sum>
                    <property>instrumentation/ctl22[1]/standby-mhz</property>
                    <property>instrumentation/ctl22[1]/standby-khz</property>
                </sum>
            </expression>
        </input>
        <output>instrumentation/ctl22[1]/standby</output>
    </filter>

    <filter>
        <type>gain</type>
        <name>ctl22-comm1-standby-push-old</name>
        <enable>
            <condition>
                <property>instrumentation/comm[1]/operable</property>
                <not><property>instrumentation/ctl22[1]/new-radio</property></not>
                <greater-than>
                    <property>instrumentation/ctl22[1]/standby-trigger</property>
                    <value>1.0</value>
                </greater-than>
            </condition>
        </enable>
        <input>
            <expression>
                <product>
                    <property>instrumentation/ctl22[1]/standby</property>
                    <value>0.001</value>
                </product>
            </expression>
        </input>
        <output>instrumentation/comm[1]/frequencies/standby-mhz</output>
    </filter>

    <filter>
        <type>gain</type>
        <name>ctl22-comm1-standby-push-new</name>
        <enable>
            <condition>
                <property>instrumentation/comm[1]/operable</property>
                <property>instrumentation/ctl22[1]/new-radio</property>
                <greater-than>
                    <property>instrumentation/ctl22[1]/standby-trigger</property>
                    <value>1.0</value>
                </greater-than>
            </condition>
        </enable>
        <input>instrumentation/ctl22[1]/standby</input>
        <output>instrumentation/comm[1]/frequencies/standby-channel</output>
    </filter>

    <filter>
        <type>gain</type>
        <name>ctl22-comm1-standby-trigger</name>
        <enable>
            <condition>
                <greater-than>
                    <property>instrumentation/ctl22[1]/standby-trigger</property>
                    <value>1.0</value>
                </greater-than>
                <greater-than>
                    <property>sim/time/elapsed-sec</property>
                    <expression>
                        <sum>
                            <property>instrumentation/ctl22[1]/standby-trigger</property>
                            <value>0.5</value>
                        </sum>
                    </expression>
                </greater-than>
            </condition>
        </enable>
        <input>0.0</input>
        <output>instrumentation/ctl22[1]/standby-trigger</output>
    </filter>

    <filter>
        <type>gain</type>
        <name>ctl22-comm1-standby-pull-mhz-old</name>
        <enable>
            <condition>
                <property>instrumentation/comm[1]/operable</property>
                <not><property>instrumentation/ctl22[1]/new-radio</property></not>
                <not-equals>
                    <expression>
                        <floor>
                            <sum>
                                <product>
                                    <property>instrumentation/comm[1]/frequencies/standby-mhz</property>
                                    <value>1000.0</value>
                                </product>
                                <value>0.5</value>
                            </sum>
                        </floor>
                    </expression>
                    <property>instrumentation/ctl22[1]/standby</property>
                </not-equals>
                <less-than>
                    <property>instrumentation/ctl22[1]/standby-trigger</property>
                    <value>1.0</value>
                </less-than>
            </condition>
        </enable>
        <input>
            <expression>
                <floor>
                    <sum>
                        <property>instrumentation/comm[1]/frequencies/standby-mhz</property>
                        <value>0.0005</value>
                    </sum>
                </floor>
            </expression>
        </input>
        <output>instrumentation/ctl22[1]/standby-mhz</output>
    </filter>

    <filter>
        <type>gain</type>
        <name>ctl22-comm1-standby-pull-khz-old</name>
        <enable>
            <condition>
                <property>instrumentation/comm[1]/operable</property>
                <not><property>instrumentation/ctl22[1]/new-radio</property></not>
                <not-equals>
                    <expression>
                        <floor>
                            <sum>
                                <product>
                                    <property>instrumentation/comm[1]/frequencies/standby-mhz</property>
                                    <value>1000.0</value>
                                </product>
                                <value>0.5</value>
                            </sum>
                        </floor>
                    </expression>
                    <property>instrumentation/ctl22[1]/standby</property>
                </not-equals>
                <less-than>
                    <property>instrumentation/ctl22[1]/standby-trigger</property>
                    <value>1.0</value>
                </less-than>
            </condition>
        </enable>
        <input>
            <expression>
                <mod>
                    <floor>
                        <sum>
                            <product>
                                <property>instrumentation/comm[1]/frequencies/standby-mhz</property>
                                <value>1000.0</value>
                            </product>
                            <value>0.5</value>
                        </sum>
                    </floor>
                    <value>1000</value>
                </mod>
            </expression>
        </input>
        <output>instrumentation/ctl22[1]/standby-khz</output>
    </filter>

    <filter>
        <type>gain</type>
        <name>ctl22-comm1-standby-pull-mhz-new</name>
        <enable>
            <condition>
                <property>instrumentation/comm[1]/operable</property>
                <property>instrumentation/ctl22[1]/new-radio</property>
                <not-equals>
                    <property>instrumentation/comm[1]/frequencies/standby-channel</property>
                    <property>instrumentation/ctl22[1]/standby</property>
                </not-equals>
                <less-than>
                    <property>instrumentation/ctl22[1]/standby-trigger</property>
                    <value>1.0</value>
                </less-than>
            </condition>
        </enable>
        <input>
            <expression>
                <product>
                    <floor>
                        <div>
                            <property>instrumentation/comm[1]/frequencies/standby-channel</property>
                            <value>160</value>
                        </div>
                    </floor>
                    <value>160</value>
                </product>
            </expression>
        </input>
        <output>instrumentation/ctl22[1]/standby-mhz</output>
    </filter>

    <filter>
        <type>gain</type>
        <name>ctl22-comm1-standby-pull-khz-new</name>
        <enable>
            <condition>
                <property>instrumentation/comm[1]/operable</property>
                <property>instrumentation/ctl22[1]/new-radio</property>
                <not-equals>
                    <property>instrumentation/comm[1]/frequencies/standby-channel</property>
                    <property>instrumentation/ctl22[1]/standby</property>
                </not-equals>
                <less-than>
                    <property>instrumentation/ctl22[1]/standby-trigger</property>
                    <value>1.0</value>
                </less-than>
            </condition>
        </enable>
        <input>
            <expression>
                <mod>
                    <property>instrumentation/comm[1]/frequencies/standby-channel</property>
                    <value>160</value>
                </mod>
            </expression>
        </input>
        <output>instrumentation/ctl22[1]/standby-khz</output>
    </filter>

    <filter>
        <type>gain</type>
        <name>ctl22-comm1-selected-mhz</name>
        <enable>
            <condition>
                <property>instrumentation/comm[1]/operable</property>
                <not><property>instrumentation/ctl22[1]/new-radio</property></not>
                <less-than>
                    <property>instrumentation/ctl22[1]/selected-mhz</property>
                    <value>118</value>
                </less-than>
            </condition>
        </enable>
        <input>118</input>
        <output>instrumentation/ctl22[1]/selected-mhz</output>
    </filter>

    <filter>
        <type>gain</type>
        <name>ctl22-comm1-selected</name>
        <enable>
            <condition>
                <property>instrumentation/comm[1]/operable</property>
            </condition>
        </enable>
        <input>
            <condition>
                <not><property>instrumentation/ctl22[1]/new-radio</property></not>
            </condition>
            <expression>
                <sum>
                    <product>
                        <property>instrumentation/ctl22[1]/selected-mhz</property>
                        <value>1000</value>
                    </product>
                    <property>instrumentation/ctl22[1]/selected-khz</property>
                </sum>
            </expression>
        </input>
        <input>
            <condition>
                <property>instrumentation/ctl22[1]/new-radio</property>
            </condition>
            <expression>
                <sum>
                    <property>instrumentation/ctl22[1]/selected-mhz</property>
                    <property>instrumentation/ctl22[1]/selected-khz</property>
                </sum>
            </expression>
        </input>
        <output>instrumentation/ctl22[1]/selected</output>
    </filter>

    <filter>
        <type>gain</type>
        <name>ctl22-comm1-selected-push-old</name>
        <enable>
            <condition>
                <property>instrumentation/comm[1]/operable</property>
                <not><property>instrumentation/ctl22[1]/new-radio</property></not>
                <greater-than>
                    <property>instrumentation/ctl22[1]/selected-trigger</property>
                    <value>1.0</value>
                </greater-than>
            </condition>
        </enable>
        <input>
            <expression>
                <product>
                    <property>instrumentation/ctl22[1]/selected</property>
                    <value>0.001</value>
                </product>
            </expression>
        </input>
        <output>instrumentation/comm[1]/frequencies/selected-mhz</output>
    </filter>

    <filter>
        <type>gain</type>
        <name>ctl22-comm1-selected-push-new</name>
        <enable>
            <condition>
                <property>instrumentation/comm[1]/operable</property>
                <property>instrumentation/ctl22[1]/new-radio</property>
                <greater-than>
                    <property>instrumentation/ctl22[1]/selected-trigger</property>
                    <value>1.0</value>
                </greater-than>
            </condition>
        </enable>
        <input>instrumentation/ctl22[1]/selected</input>
        <output>instrumentation/comm[1]/frequencies/selected-channel</output>
    </filter>

    <filter>
        <type>gain</type>
        <name>ctl22-comm1-selected-trigger</name>
        <enable>
            <condition>
                <greater-than>
                    <property>instrumentation/ctl22[1]/selected-trigger</property>
                    <value>1.0</value>
                </greater-than>
                <greater-than>
                    <property>sim/time/elapsed-sec</property>
                    <expression>
                        <sum>
                            <property>instrumentation/ctl22[1]/selected-trigger</property>
                            <value>0.5</value>
                        </sum>
                    </expression>
                </greater-than>
            </condition>
        </enable>
        <input>0.0</input>
        <output>instrumentation/ctl22[1]/selected-trigger</output>
    </filter>

    <filter>
        <type>gain</type>
        <name>ctl22-comm1-selected-pull-mhz-old</name>
        <enable>
            <condition>
                <property>instrumentation/comm[1]/operable</property>
                <not><property>instrumentation/ctl22[1]/new-radio</property></not>
                <not-equals>
                    <expression>
                        <floor>
                            <sum>
                                <product>
                                    <property>instrumentation/comm[1]/frequencies/selected-mhz</property>
                                    <value>1000.0</value>
                                </product>
                                <value>0.5</value>
                            </sum>
                        </floor>
                    </expression>
                    <property>instrumentation/ctl22[1]/selected</property>
                </not-equals>
                <less-than>
                    <property>instrumentation/ctl22[1]/selected-trigger</property>
                    <value>1.0</value>
                </less-than>
            </condition>
        </enable>
        <input>
            <expression>
                <floor>
                    <sum>
                        <property>instrumentation/comm[1]/frequencies/selected-mhz</property>
                        <value>0.0005</value>
                    </sum>
                </floor>
            </expression>
        </input>
        <output>instrumentation/ctl22[1]/selected-mhz</output>
    </filter>

    <filter>
        <type>gain</type>
        <name>ctl22-comm1-selected-pull-khz-old</name>
        <enable>
            <condition>
                <property>instrumentation/comm[1]/operable</property>
                <not><property>instrumentation/ctl22[1]/new-radio</property></not>
                <not-equals>
                    <expression>
                        <floor>
                            <sum>
                                <product>
                                    <property>instrumentation/comm[1]/frequencies/selected-mhz</property>
                                    <value>1000.0</value>
                                </product>
                                <value>0.5</value>
                            </sum>
                        </floor>
                    </expression>
                    <property>instrumentation/ctl22[1]/selected</property>
                </not-equals>
                <less-than>
                    <property>instrumentation/ctl22[1]/selected-trigger</property>
                    <value>1.0</value>
                </less-than>
            </condition>
        </enable>
        <input>
            <expression>
                <mod>
                    <floor>
                        <sum>
                            <product>
                                <property>instrumentation/comm[1]/frequencies/selected-mhz</property>
                                <value>1000.0</value>
                            </product>
                            <value>0.5</value>
                        </sum>
                    </floor>
                    <value>1000</value>
                </mod>
            </expression>
        </input>
        <output>instrumentation/ctl22[1]/selected-khz</output>
    </filter>

    <filter>
        <type>gain</type>
        <name>ctl22-comm1-selected-pull-mhz-new</name>
        <enable>
            <condition>
                <property>instrumentation/comm[1]/operable</property>
                <property>instrumentation/ctl22[1]/new-radio</property>
                <not-equals>
                    <property>instrumentation/comm[1]/frequencies/selected-channel</property>
                    <property>instrumentation/ctl22[1]/selected</property>
                </not-equals>
                <less-than>
                    <property>instrumentation/ctl22[1]/selected-trigger</property>
                    <value>1.0</value>
                </less-than>
            </condition>
        </enable>
        <input>
            <expression>
                <product>
                    <floor>
                        <div>
                            <property>instrumentation/comm[1]/frequencies/selected-channel</property>
                            <value>160</value>
                        </div>
                    </floor>
                    <value>160</value>
                </product>
            </expression>
        </input>
        <output>instrumentation/ctl22[1]/selected-mhz</output>
    </filter>

    <filter>
        <type>gain</type>
        <name>ctl22-comm1-selected-pull-khz-new</name>
        <enable>
            <condition>
                <property>instrumentation/comm[1]/operable</property>
                <property>instrumentation/ctl22[1]/new-radio</property>
                <not-equals>
                    <property>instrumentation/comm[1]/frequencies/selected-channel</property>
                    <property>instrumentation/ctl22[1]/selected</property>
                </not-equals>
                <less-than>
                    <property>instrumentation/ctl22[1]/selected-trigger</property>
                    <value>1.0</value>
                </less-than>
            </condition>
        </enable>
        <input>
            <expression>
                <mod>
                    <property>instrumentation/comm[1]/frequencies/selected-channel</property>
                    <value>160</value>
                </mod>
            </expression>
        </input>
        <output>instrumentation/ctl22[1]/selected-khz</output>
    </filter>

    <filter>
        <type>gain</type>
        <name>ctl22-comm1-sq</name>
        <input>
            <condition>
                <equals>
                    <property>instrumentation/ctl22[1]/power-knob</property>
                    <value>2</value>
                </equals>
            </condition>
            <value>0.0</value>
        </input>
        <input>0.4</input>
        <output>instrumentation/comm[1]/cutoff-signal-quality</output>
    </filter>

<!-- toggle -->

    <filter>
        <type>gain</type>
        <name>ctl22-comm1-toggle-run-start</name>
        <enable>
            <condition>
                <property>instrumentation/ctl22[1]/toggle</property>
                <equals>
                    <property>instrumentation/ctl22[1]/toggle-run</property>
                    <value>0.0</value>
                </equals>
            </condition>
        </enable>
        <input>
            <expression>
                <sum>
                    <property>sim/time/elapsed-sec</property>
                    <value>0.3</value>
                </sum>
            </expression>
        </input>
        <output>instrumentation/ctl22[1]/toggle-run</output>
    </filter>

    <filter>
        <type>gain</type>
        <name>ctl22-comm1-toggle-run-stop</name>
        <enable>
            <condition>
                <property>instrumentation/ctl22[1]/toggle</property>
                <greater-than>
                    <property>sim/time/elapsed-sec</property>
                    <property>instrumentation/ctl22[1]/toggle-run</property>
                </greater-than>
            </condition>
        </enable>
        <input>0.0</input>
        <output>instrumentation/ctl22[1]/toggle</output>
        <output>instrumentation/ctl22[1]/toggle-run</output>
    </filter>

<!-- memory  -->

    <filter>
        <type>gain</type>
        <name>ctl22-comm1-memory-run-start</name>
        <enable>
            <condition>
                <property>instrumentation/ctl22[1]/mem-mode</property>
                <equals>
                    <property>instrumentation/ctl22[1]/mem-run</property>
                    <value>0.0</value>
                </equals>
            </condition>
        </enable>
        <input>sim/time/elapsed-sec</input>
        <output>instrumentation/ctl22[1]/mem-run</output>
    </filter>

    <filter>
        <type>gain</type>
        <name>ctl22-comm1-mem-clear</name>
        <enable>
            <condition>
                <greater-than>
                    <property>sim/time/elapsed-sec</property>
                    <expression>
                        <sum>
                            <property>instrumentation/ctl22[1]/mem-run</property>
                            <value>5.0</value>
                        </sum>
                    </expression>
                </greater-than>
            </condition>
        </enable>
        <input>0</input>
        <output>instrumentation/ctl22[1]/mem-mode</output>
        <output>instrumentation/ctl22[1]/mem-run</output>
    </filter>

</PropertyList>
