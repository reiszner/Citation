    <animation>
        <type>pick</type>
        <object-name>ctl62.btn.sto</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <condition>
                    <and>
                        <property>instrumentation/adf[0]/operable</property>
                        <not><property>instrumentation/ctl62[0]/mode</property></not>
                        <property>instrumentation/ctl62[0]/mem-mode</property>
                    </and>
                </condition>
                <command>nasal</command>
                <script>
                    <![CDATA[
                        setprop('instrumentation/ctl62[0]/mem-khz[' ~ getprop('instrumentation/ctl62[0]/mem-pos') ~ ']',
                            getprop('instrumentation/ctl62[0]/standby-khz')
                        );
                    ]]>
                </script>
            </binding>
            <binding>
                <condition>
                    <and>
                        <property>instrumentation/adf[0]/operable</property>
                        <not><property>instrumentation/ctl62[0]/mode</property></not>
                        <property>instrumentation/ctl62[0]/mem-mode</property>
                    </and>
                </condition>
                <command>property-assign</command>
                <property>instrumentation/ctl62[0]/mem-mode</property>
                <value>-1</value>
            </binding>
            <binding>
                <condition>
                    <and>
                        <property>instrumentation/adf[0]/operable</property>
                        <not><property>instrumentation/ctl62[0]/mode</property></not>
                        <not><property>instrumentation/ctl62[0]/mem-mode</property></not>
                    </and>
                </condition>
                <command>property-assign</command>
                <property>instrumentation/ctl62[0]/mem-mode</property>
                <value>1</value>
            </binding>
            <binding>
                <condition>
                    <and>
                        <property>instrumentation/adf[0]/operable</property>
                        <not><property>instrumentation/ctl62[0]/mode</property></not>
                        <equals>
                            <property>instrumentation/ctl62[0]/mem-mode</property>
                            <value>-1</value>
                        </equals>
                    </and>
                </condition>
                <command>property-assign</command>
                <property>instrumentation/ctl62[0]/mem-run</property>
                <value>0.0</value>
            </binding>
            <binding>
                <condition>
                    <and>
                        <property>instrumentation/adf[0]/operable</property>
                        <not><property>instrumentation/ctl62[0]/mode</property></not>
                        <equals>
                            <property>instrumentation/ctl62[0]/mem-mode</property>
                            <value>-1</value>
                        </equals>
                    </and>
                </condition>
                <command>property-assign</command>
                <property>instrumentation/ctl62[0]/mem-mode</property>
                <value>0</value>
            </binding>
        </action>
        <hovered>
            <binding>
                <condition>
                    <property>instrumentation/adf[0]/operable</property>
                </condition>
                <command>set-tooltip</command>
                <tooltip-id>adf0-sto</tooltip-id>
                <label>ADF1 store: %s</label>
                <property>instrumentation/ctl62[0]/mem-mode</property>
                <mapping>on-off</mapping>
            </binding>
        </hovered>
