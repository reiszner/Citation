            </binding>
            <binding>
                <condition>
                    <and>
                        <property>instrumentation/adf[0]/operable</property>
                        <property>instrumentation/ctl62[0]/mode</property>
                    </and>
                </condition>
                <command>set-tooltip</command>
                <tooltip-id>adf0-freq</tooltip-id>
