Active and preset displayed +
4 frequency memory storage
2.375"W x 2.625"H
Freq. range 190.0 - 1800.0 (normal)
Strap option 2179.0 - 2185.0
500 kHz spacing
Syd Adams

Update:
model updated with complete display (used in all Collins devices)
add active mode (ACT)
add memory recall and storage (STO)

Sascha ReiÃŸner
-->

<PropertyList>

    <path>ctl62.ac</path>

    <animation>
        <type>select</type>
        <object-name>ctl62.display</object-name>
        <object-name>ctl62.freq.001</object-name>
        <object-name>ctl62.freq.002</object-name>
        <object-name>ctl62.freq.003</object-name>
        <object-name>ctl62.freq.004</object-name>
        <object-name>ctl62.freq.005</object-name>
        <object-name>ctl62.freq.dec2</object-name>
        <object-name>ctl62.stby.001</object-name>
        <object-name>ctl62.stby.002</object-name>
        <object-name>ctl62.stby.003</object-name>
        <object-name>ctl62.stby.004</object-name>
        <object-name>ctl62.stby.005</object-name>
        <object-name>ctl62.stby.dec2</object-name>
        <object-name>ctl62.code.001</object-name>
        <object-name>ctl62.code.002</object-name>
        <object-name>ctl62.dash</object-name>
        <object-name>ctl62.diag</object-name>
        <object-name>ctl62.mem</object-name>
        <object-name>ctl62.mem.ch</object-name>
        <object-name>ctl62.annun.act</object-name>
        <object-name>ctl62.annun.mem</object-name>
        <object-name>ctl62.annun.rmt</object-name>
        <object-name>ctl62.annun.tx</object-name>
        <object-name>ctl62.annun.hold</object-name>
        <object-name>ctl62.toggle.lit</object-name>
        <condition>
            <property>instrumentation/adf[0]/operable</property>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>ctl62.freq.001</object-name>
        <object-name>ctl62.freq.002</object-name>
        <object-name>ctl62.freq.003</object-name>
        <object-name>ctl62.freq.004</object-name>
        <object-name>ctl62.freq.005</object-name>
        <object-name>ctl62.freq.dec2</object-name>
        <condition>
            <and>
                <less-than>
                    <property>instrumentation/ctl62[0]/mode</property>
                    <value>2</value>
                </less-than>
                <less-than>
                    <property>instrumentation/ctl62[0]/mem-run</property>
                    <value>1.0</value>
                </less-than>
            </and>
        </condition>
    </animation>

<!--   Memory Channel   -->
    <animation>
        <type>select</type>
        <object-name>ctl62.mem</object-name>
        <object-name>ctl62.mem.ch</object-name>
        <condition>
            <and>
                <less-than>
                    <property>instrumentation/ctl62[0]/mode</property>
                    <value>2</value>
                </less-than>
                <greater-than>
                    <property>instrumentation/ctl62[0]/mem-run</property>
                    <value>1.0</value>
                </greater-than>
            </and>
        </condition>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>ctl62.mem.ch</object-name>
        <condition>
            <less-than>
                <property>instrumentation/ctl62[0]/mode</property>
                <value>2</value>
            </less-than>
        </condition>
        <property>instrumentation/ctl62[0]/mem-pos</property>
        <factor>0.1</factor>
        <axis>
            <x>0</x>
            <y>1</y>
        </axis>
    </animation>

    <animation>
        <type>select</type>
        <object-name>ctl62.diag</object-name>
        <condition>
            <equals>
                <property>instrumentation/ctl62[0]/mode</property>
                <value>2</value>
            </equals>
            </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>ctl62.stby.001</object-name>
        <object-name>ctl62.stby.002</object-name>
        <object-name>ctl62.stby.003</object-name>
        <object-name>ctl62.stby.004</object-name>
        <object-name>ctl62.stby.005</object-name>
        <object-name>ctl62.stby.dec2</object-name>
        <condition>
            <or>
                <not><property>instrumentation/ctl62[0]/mode</property></not>
                <and>
                    <equals>
                        <property>instrumentation/ctl62[0]/mode</property>
                        <value>1</value>
                    </equals>
                    <greater-than>
                        <property>instrumentation/ctl62[0]/mem-run</property>
                        <value>1.0</value>
                    </greater-than>
                </and>
            </or>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>ctl62.dash</object-name>
        <condition>
            <and>
                <equals>
                    <property>instrumentation/ctl62[0]/mode</property>
                    <value>1</value>
                </equals>
                <less-than>
                    <property>instrumentation/ctl62[0]/mem-run</property>
                    <value>1.0</value>
                </less-than>
            </and>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>ctl62.code.001</object-name>
        <object-name>ctl62.code.002</object-name>
        <condition>
            <equals>
                <property>instrumentation/ctl62[0]/mode</property>
                <value>2</value>
            </equals>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>ctl62.annun.act</object-name>
        <condition>
            <or>
                <and>
                    <equals>
                        <property>instrumentation/ctl62[0]/toggle</property>
                        <value>1</value>
                    </equals>
                    <not><property>instrumentation/ctl62[0]/mem-mode</property></not>
                </and>
                <equals>
                    <property>instrumentation/ctl62[0]/mode</property>
                    <value>1</value>
                </equals>
            </or>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>ctl62.annun.mem</object-name>
        <condition>
            <and>
                <not><property>instrumentation/ctl62[0]/mode</property></not>
                <or>
                    <equals>
                        <property>instrumentation/ctl62[0]/mem-khz[0]</property>
                        <property>instrumentation/ctl62[0]/standby-khz</property>
                    </equals>
                    <equals>
                        <property>instrumentation/ctl62[0]/mem-khz[1]</property>
                        <property>instrumentation/ctl62[0]/standby-khz</property>
                    </equals>
                    <equals>
                        <property>instrumentation/ctl62[0]/mem-khz[2]</property>
                        <property>instrumentation/ctl62[0]/standby-khz</property>
                    </equals>
                    <equals>
                        <property>instrumentation/ctl62[0]/mem-khz[3]</property>
                        <property>instrumentation/ctl62[0]/standby-khz</property>
                    </equals>
                </or>
            </and>
        </condition>
    </animation>

<!--   unused parts   -->
    <animation>
        <type>select</type>
        <object-name>ctl62.freq.dec1</object-name>
        <object-name>ctl62.stby.dec1</object-name>
        <object-name>ctl62.annun.rmt</object-name>
        <object-name>ctl62.annun.tx</object-name>
        <object-name>ctl62.annun.hold</object-name>
        <condition>
            <equals>
                <property>instrumentation/ctl62[0]/mode</property>
                <value>5</value>
            </equals>
        </condition>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>ctl62.toggle</object-name>
        <property>instrumentation/ctl62[0]/toggle</property>
        <factor>20</factor>
        <axis>
            <object-name>ctl62.toggle-axis</object-name>
        </axis>
    </animation>

<!--   Active Frequency   -->
