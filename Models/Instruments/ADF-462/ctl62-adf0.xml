        <step>1000</step>
        <bias>0.05</bias>
        <axis>
            <x>0</x>
            <y>1</y>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>ctl62.freq.002</object-name>
        <property>instrumentation/adf[0]/frequencies/selected-khz</property>
        <factor>0.001</factor>
        <step>100</step>
        <bias>0.05</bias>
        <axis>
            <x>0</x>
            <y>1</y>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>ctl62.freq.003</object-name>
        <property>instrumentation/adf[0]/frequencies/selected-khz</property>
        <factor>0.01</factor>
        <step>10</step>
        <bias>0.05</bias>
        <axis>
            <x>0</x>
            <y>1</y>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>ctl62.freq.004</object-name>
        <property>instrumentation/adf[0]/frequencies/selected-khz</property>
        <factor>0.1</factor>
        <step>1</step>
        <bias>0.05</bias>
        <axis>
            <x>0</x>
            <y>1</y>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>ctl62.freq.005</object-name>
        <property>instrumentation/adf[0]/frequencies/selected-khz</property>
        <factor>1</factor>
        <step>0.1</step>
        <bias>0.05</bias>
        <axis>
            <x>0</x>
            <y>1</y>
        </axis>
    </animation>

<!--   Preselected Frequency   -->
    <animation>
        <type>textranslate</type>
        <object-name>ctl62.stby.001</object-name>
        <property>instrumentation/adf[0]/frequencies/standby-khz</property>
        <factor>0.0001</factor>
        <step>1000</step>
        <bias>0.05</bias>
        <axis>
            <x>0</x>
            <y>1</y>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>ctl62.stby.002</object-name>
        <property>instrumentation/adf[0]/frequencies/standby-khz</property>
        <factor>0.001</factor>
        <step>100</step>
        <bias>0.05</bias>
        <axis>
            <x>0</x>
            <y>1</y>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>ctl62.stby.003</object-name>
        <property>instrumentation/adf[0]/frequencies/standby-khz</property>
        <factor>0.01</factor>
        <step>10</step>
        <bias>0.05</bias>
        <axis>
            <x>0</x>
            <y>1</y>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>ctl62.stby.004</object-name>
        <property>instrumentation/adf[0]/frequencies/standby-khz</property>
        <factor>0.1</factor>
        <step>1</step>
        <bias>0.05</bias>
        <axis>
            <x>0</x>
            <y>1</y>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>ctl62.stby.005</object-name>
        <property>instrumentation/adf[0]/frequencies/standby-khz</property>
        <factor>10</factor>
        <step>0.1</step>
        <bias>0.05</bias>
        <axis>
            <x>0</x>
            <y>1</y>
        </axis>
    </animation>

<!--   OSG hotspots   -->
    <animation>
        <type>pick</type>
        <object-name>ctl62.toggle</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-assign</command>
                <property>instrumentation/ctl62[0]/toggle</property>
                <value>1</value>
            </binding>

<!-- normal swap -->
            <binding>
                <condition>
                    <and>
                        <property>instrumentation/adf[0]/operable</property>
                        <or>
                            <not><property>instrumentation/ctl62[0]/mode</property></not>
                            <greater-than>
                                <property>instrumentation/ctl62[0]/mem-run</property>
                                <value>1.0</value>
                            </greater-than>
                        </or>
                        <not><property>instrumentation/ctl62[0]/mem-mode</property></not>
                    </and>
                </condition>
                <command>property-swap</command>
                <property>instrumentation/ctl62[0]/selected-khz</property>
                <property>instrumentation/ctl62[0]/standby-khz</property>
            </binding>

<!-- clear mem-run -->
            <binding>
                <condition>
                    <and>
                        <property>instrumentation/adf[0]/operable</property>
                        <not><property>instrumentation/ctl62[0]/mem-mode</property></not>
                    </and>
                </condition>
                <command>property-assign</command>
                <property>instrumentation/ctl62[0]/mem-run</property>
                <value>0.0</value>
            </binding>

<!-- channel set -->
            <binding>
                <condition>
                    <and>
                        <property>instrumentation/adf[0]/operable</property>
                        <less-than>
                            <property>instrumentation/ctl62[0]/mode</property>
                            <value>2</value>
                        </less-than>
                        <property>instrumentation/ctl62[0]/mem-mode</property>
                    </and>
                </condition>
                <command>property-adjust</command>
                <property>instrumentation/ctl62[0]/mem-pos</property>
                <min>0</min>
                <max>4</max>
                <step>-1</step>
                <wrap>true</wrap>
            </binding>
            <binding>
                <condition>
                    <and>
                        <property>instrumentation/adf[0]/operable</property>
                        <less-than>
                            <property>instrumentation/ctl62[0]/mode</property>
                            <value>2</value>
                        </less-than>
                        <property>instrumentation/ctl62[0]/mem-mode</property>
                    </and>
                </condition>
                <command>property-assign</command>
                <property>instrumentation/ctl62[0]/mem-run</property>
                <property>sim/time/elapsed-sec</property>
            </binding>

<!-- set trigger -->
            <binding>
                <condition>
                    <and>
                        <property>instrumentation/adf[0]/operable</property>
                        <not><property>instrumentation/ctl62[0]/mem-mode</property></not>
                    </and>
                </condition>
                <command>property-assign</command>
                <property>instrumentation/ctl62[0]/standby-trigger</property>
                <property>sim/time/elapsed-sec</property>
            </binding>
            <binding>
                <condition>
                    <and>
                        <property>instrumentation/adf[0]/operable</property>
                        <not><property>instrumentation/ctl62[0]/mem-mode</property></not>
                    </and>
                </condition>
                <command>property-assign</command>
                <property>instrumentation/ctl62[0]/selected-trigger</property>
                <property>sim/time/elapsed-sec</property>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>adf0-toggle</tooltip-id>
                <label>ADF1 swap frequencies</label>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>ctl62.toggle</object-name>
        <action>
            <button>1</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-assign</command>
                <property>instrumentation/ctl62[0]/toggle</property>
                <value>-1</value>
            </binding>

<!-- increase mem-pos -->
            <binding>
                <condition>
                    <and>
                        <property>instrumentation/adf[0]/operable</property>
                        <less-than>
                            <property>instrumentation/ctl62[0]/mode</property>
                            <value>2</value>
                        </less-than>
                        <greater-than>
                            <property>instrumentation/ctl62[0]/mem-run</property>
                            <value>1.0</value>
                        </greater-than>
                    </and>
                </condition>
                <command>property-adjust</command>
                <property>instrumentation/ctl62[0]/mem-pos</property>
                <min>0</min>
                <max>4</max>
                <step>1</step>
                <wrap>true</wrap>
            </binding>

<!-- trigger mem-run -->
            <binding>
                <condition>
                    <and>
                        <property>instrumentation/adf[0]/operable</property>
                        <less-than>
                            <property>instrumentation/ctl62[0]/mode</property>
                            <value>2</value>
                        </less-than>
                    </and>
                </condition>
                <command>property-assign</command>
                <property>instrumentation/ctl62[0]/mem-run</property>
                <property>sim/time/elapsed-sec</property>
            </binding>

<!-- recall mem -->
            <binding>
                <condition>
                    <and>
                        <property>instrumentation/adf[0]/operable</property>
                        <less-than>
                            <property>instrumentation/ctl62[0]/mode</property>
                            <value>2</value>
                        </less-than>
                        <not><property>instrumentation/ctl62[0]/mem-mode</property></not>
                    </and>
                </condition>
                <command>nasal</command>
                <script>
                    <![CDATA[
                        setprop('instrumentation/ctl62[0]/standby-khz',
                            getprop('instrumentation/ctl62[0]/mem-khz[' ~ getprop('instrumentation/ctl62[0]/mem-pos') ~ ']')
                        );
                    ]]>
                </script>
            </binding>

<!-- set trigger -->
            <binding>
                <condition>
                    <and>
                        <property>instrumentation/adf[0]/operable</property>
                        <not><property>instrumentation/ctl62[0]/mem-mode</property></not>
                    </and>
                </condition>
                <command>property-assign</command>
                <property>instrumentation/ctl62[0]/standby-trigger</property>
                <property>sim/time/elapsed-sec</property>
            </binding>
        </action>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>ctl62.pwr</object-name>
        <property>instrumentation/ctl62[0]/power-knob</property>
        <factor>30.5</factor>
        <axis>
            <object-name>ctl62.pwr-axis</object-name>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/ctl62[0]/power-knob</property>
                <factor>1</factor>
                <min>0</min>
                <max>3</max>
                <wrap>false</wrap>
            </binding>
            <binding>
                <condition>
                    <equals>
                        <property>instrumentation/ctl62[0]/power-knob</property>
                        <value>0</value>
                    </equals>
                </condition>
                <command>property-assign</command>
                <property>instrumentation/adf[0]/mode</property>
                <value>off</value>
            </binding>
            <binding>
                <condition>
                    <equals>
                        <property>instrumentation/ctl62[0]/power-knob</property>
                        <value>1</value>
                    </equals>
                </condition>
                <command>property-assign</command>
                <property>instrumentation/adf[0]/mode</property>
                <value>ant</value>
            </binding>
            <binding>
                <condition>
                    <equals>
                        <property>instrumentation/ctl62[0]/power-knob</property>
                        <value>2</value>
                    </equals>
                </condition>
                <command>property-assign</command>
                <property>instrumentation/adf[0]/mode</property>
                <value>adf</value>
            </binding>
            <binding>
                <condition>
                    <equals>
                        <property>instrumentation/ctl62[0]/power-knob</property>
                        <value>3</value>
                    </equals>
                </condition>
                <command>property-assign</command>
                <property>instrumentation/adf[0]/mode</property>
                <value>bfo</value>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>adf0-power</tooltip-id>
                <label>ADF1: %s</label>
                <property>instrumentation/ctl62[0]/power-knob</property>
                <mapping>nasal</mapping>
                <script>
                    var modes = ['OFF', 'ANT', 'ADF', 'TONE'];
                    return modes[arg[0]];
                </script>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>ctl62.vol</object-name>
        <property>instrumentation/adf[0]/volume-norm</property>
        <factor>270</factor>
        <axis>
            <object-name>ctl62.pwr-axis</object-name>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/adf[0]/volume-norm</property>
                <factor>0.05</factor>
                <min>0</min>
                <max>1</max>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>adf0-vol</tooltip-id>
                <label>ADF1 volume: %d%%</label>
                <property>instrumentation/adf[0]/volume-norm</property>
                <mapping>percent</mapping>
            </binding>
        </hovered>
    </animation>

