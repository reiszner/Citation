<?xml version='1.0' encoding='utf-8'?>
<PropertyList>

    <path>vn-212.ac</path>

    <animation>
        <type>select</type>
        <object-name>alt.digit1</object-name>
        <object-name>alt.digit10</object-name>
        <object-name>alt.digit100</object-name>
        <object-name>stael.digit1</object-name>
        <object-name>stael.digit10</object-name>
        <object-name>stael.digit100</object-name>
        <object-name>to.digit1</object-name>
        <object-name>to.digit10</object-name>
        <object-name>to.digit100</object-name>
        <object-name>from.digit1</object-name>
        <object-name>from.digit10</object-name>
        <object-name>from.digit100</object-name>
        <object-name>vang.digit1</object-name>
        <object-name>vang.digit10</object-name>
        <object-name>vang.minus</object-name>
        <object-name>dash</object-name>
        <object-name>decimal</object-name>
        <condition>
            <property>autopilot/vn-212/serviceable</property>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>vang.digit1</object-name>
        <object-name>vang.digit10</object-name>
        <object-name>vang.minus</object-name>
        <condition>
            <equals>
                <property>autopilot/vn-212/select</property>
                <value>0</value>
            </equals>
            <less-than>
                <property>autopilot/vn-212/vertical-angle-display</property>
                <value>100</value>
            </less-than>
            <greater-than>
                <property>autopilot/vn-212/vertical-angle-display</property>
                <value>-100</value>
            </greater-than>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>vang.minus</object-name>
        <condition>
            <less-than>
                <property>autopilot/vn-212/vertical-angle-deg</property>
                <value>-0.05</value>
            </less-than>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>from.digit1</object-name>
        <object-name>from.digit10</object-name>
        <object-name>from.digit100</object-name>
        <condition>
            <equals>
                <property>autopilot/vn-212/select</property>
                <value>1</value>
            </equals>
            <greater-than>
                <property>autopilot/vn-212/from-to</property>
                <value>0</value>
            </greater-than>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>from.digit100</object-name>
        <condition>
            <greater-than>
                <property>autopilot/vn-212/station-distance-nm</property>
                <value>9.95</value>
            </greater-than>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>to.digit1</object-name>
        <object-name>to.digit10</object-name>
        <object-name>to.digit100</object-name>
        <condition>
            <equals>
                <property>autopilot/vn-212/select</property>
                <value>2</value>
            </equals>
            <less-than>
                <property>autopilot/vn-212/from-to</property>
                <value>0</value>
            </less-than>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>to.digit100</object-name>
        <condition>
            <greater-than>
                <property>autopilot/vn-212/station-distance-nm</property>
                <value>9.95</value>
            </greater-than>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>stael.digit1</object-name>
        <object-name>stael.digit10</object-name>
        <object-name>stael.digit100</object-name>
        <condition>
            <equals>
                <property>autopilot/vn-212/select</property>
                <value>3</value>
            </equals>
            <greater-than>
                <property>autopilot/vn-212/station-elevation-ft</property>
                <value>-1</value>
            </greater-than>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>stael.digit10</object-name>
        <condition>
            <greater-than>
                <property>autopilot/vn-212/station-elevation-ft</property>
                <value>995</value>
            </greater-than>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>stael.digit100</object-name>
        <condition>
            <greater-than>
                <property>autopilot/vn-212/station-elevation-ft</property>
                <value>9950</value>
            </greater-than>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>alt.digit1</object-name>
        <object-name>alt.digit10</object-name>
        <object-name>alt.digit100</object-name>
        <condition>
            <equals>
                <property>autopilot/vn-212/select</property>
                <value>4</value>
            </equals>
            <less-than>
                <property>autopilot/vn-212/station-elevation-ft</property>
                <value>0</value>
            </less-than>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>alt.digit10</object-name>
        <condition>
            <greater-than>
                <property>autopilot/vn-212/altitude-select</property>
                <value>995</value>
            </greater-than>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>alt.digit100</object-name>
        <condition>
            <greater-than>
                <property>autopilot/vn-212/altitude-select</property>
                <value>9950</value>
            </greater-than>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>decimal</object-name>
        <condition>
            <or>
                <and>
                    <equals>
                        <property>autopilot/vn-212/select</property>
                        <value>0</value>
                    </equals>
                    <less-than>
                        <property>autopilot/vn-212/vertical-angle-display</property>
                        <value>100</value>
                    </less-than>
                    <greater-than>
                        <property>autopilot/vn-212/vertical-angle-display</property>
                        <value>-100</value>
                    </greater-than>
                </and>
                <and>
                    <equals>
                        <property>autopilot/vn-212/select</property>
                        <value>1</value>
                    </equals>
                    <greater-than>
                        <property>autopilot/vn-212/from-to</property>
                        <value>0</value>
                    </greater-than>
                </and>
                <and>
                    <equals>
                        <property>autopilot/vn-212/select</property>
                        <value>2</value>
                    </equals>
                    <less-than>
                        <property>autopilot/vn-212/from-to</property>
                        <value>0</value>
                    </less-than>
                </and>
            </or>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>dash</object-name>
        <condition>
            <or>
                <and>
                    <equals>
                        <property>autopilot/vn-212/select</property>
                        <value>0</value>
                    </equals>
                    <less-than>
                        <property>autopilot/vn-212/vertical-angle-display</property>
                        <value>-99</value>
                    </less-than>
                </and>
                <and>
                    <equals>
                        <property>autopilot/vn-212/select</property>
                        <value>0</value>
                    </equals>
                    <greater-than>
                        <property>autopilot/vn-212/vertical-angle-display</property>
                        <value>99</value>
                    </greater-than>
                </and>
                <and>
                    <equals>
                        <property>autopilot/vn-212/select</property>
                        <value>1</value>
                    </equals>
                    <not-equals>
                        <property>autopilot/vn-212/from-to</property>
                        <value>1</value>
                    </not-equals>
                </and>
                <and>
                    <equals>
                        <property>autopilot/vn-212/select</property>
                        <value>2</value>
                    </equals>
                    <not-equals>
                        <property>autopilot/vn-212/from-to</property>
                        <value>-1</value>
                    </not-equals>
                </and>
                <and>
                    <equals>
                        <property>autopilot/vn-212/select</property>
                        <value>3</value>
                    </equals>
                    <less-than>
                        <property>autopilot/vn-212/station-elevation-ft</property>
                        <value>0</value>
                    </less-than>
                </and>
                <and>
                    <equals>
                        <property>autopilot/vn-212/select</property>
                        <value>4</value>
                    </equals>
                    <greater-than>
                        <property>autopilot/vn-212/station-elevation-ft</property>
                        <value>-1</value>
                    </greater-than>
                </and>
            </or>
        </condition>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>vang.digit1</object-name>
        <property>autopilot/vn-212/vertical-angle-display</property>
        <factor>0.1</factor>
        <step>1.0</step>
        <axis>
            <x>1</x>
            <y>0</y>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>vang.digit10</object-name>
        <property>autopilot/vn-212/vertical-angle-display</property>
        <factor>0.01</factor>
        <step>10.0</step>
        <axis>
            <x>1</x>
            <y>0</y>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>from.digit1</object-name>
        <object-name>to.digit1</object-name>
        <property>autopilot/vn-212/station-distance-nm</property>
        <bias>0.01</bias>
        <factor>1.0</factor>
        <step>0.1</step>
        <axis>
            <x>1</x>
            <y>0</y>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>from.digit10</object-name>
        <object-name>to.digit10</object-name>
        <property>autopilot/vn-212/station-distance-nm</property>
        <bias>0.01</bias>
        <factor>0.1</factor>
        <step>1</step>
        <axis>
            <x>1</x>
            <y>0</y>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>from.digit100</object-name>
        <object-name>to.digit100</object-name>
        <property>autopilot/vn-212/station-distance-nm</property>
        <bias>0.01</bias>
        <factor>0.01</factor>
        <step>10</step>
        <axis>
            <x>1</x>
            <y>0</y>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>stael.digit100</object-name>
        <property>autopilot/vn-212/station-elevation-ft</property>
        <factor>0.00001</factor>
        <step>10000</step>
        <axis>
            <x>1</x>
            <y>0</y>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>stael.digit10</object-name>
        <property>autopilot/vn-212/station-elevation-ft</property>
        <factor>0.0001</factor>
        <step>1000</step>
        <axis>
            <x>1</x>
            <y>0</y>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>stael.digit1</object-name>
        <property>autopilot/vn-212/station-elevation-ft</property>
        <factor>0.001</factor>
        <step>100</step>
        <axis>
            <x>1</x>
            <y>0</y>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>alt.digit100</object-name>
        <property>autopilot/vn-212/altitude-select</property>
        <factor>0.00001</factor>
        <step>10000</step>
        <axis>
            <x>1</x>
            <y>0</y>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>alt.digit10</object-name>
        <property>autopilot/vn-212/altitude-select</property>
        <factor>0.0001</factor>
        <step>1000</step>
        <axis>
            <x>1</x>
            <y>0</y>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>alt.digit1</object-name>
        <property>autopilot/vn-212/altitude-select</property>
        <factor>0.001</factor>
        <step>100</step>
        <axis>
            <x>1</x>
            <y>0</y>
        </axis>
    </animation>

<!--  Hotspots -->

    <animation>
        <type>knob</type>
        <object-name>mode.select</object-name>
        <property>autopilot/vn-212/select</property>
        <factor>36</factor>
        <axis>
            <object-name>mode.axis</object-name>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>autopilot/vn-212/select</property>
                <min>0</min>
                <max>4</max>
                <wrap>false</wrap>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>autopilot/vn-212/vertical-angle-set</property>
                <value>0</value>
            </binding>
        </action>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>mode.set</object-name>
        <property>autopilot/vn-212/set</property>
        <factor>12</factor>
        <axis>
            <object-name>mode.axis</object-name>
        </axis>

        <action>
            <binding>
                <command>property-adjust</command>
                <property>autopilot/vn-212/set</property>
            </binding>

            <binding>
                <condition>
                    <property>autopilot/vn-212/serviceable</property>
                    <equals>
                        <property>autopilot/vn-212/select</property>
                        <value>0</value>
                    </equals>
                </condition>
                <command>property-assign</command>
                <property>autopilot/vn-212/vertical-angle-set</property>
                <value>1</value>
            </binding>
            <binding>
                <condition>
                    <property>autopilot/vn-212/serviceable</property>
                    <equals>
                        <property>autopilot/vn-212/select</property>
                        <value>0</value>
                    </equals>
                </condition>
                <command>property-adjust</command>
                <property>autopilot/vn-212/vertical-angle-deg</property>
                <factor>0.1</factor>
                <min>-9.9</min>
                <max>9.9</max>
                <wrap>false</wrap>
            </binding>

            <binding>
                <condition>
                    <property>autopilot/vn-212/serviceable</property>
                    <equals>
                        <property>autopilot/vn-212/select</property>
                        <value>1</value>
                    </equals>
                </condition>
                <command>property-assign</command>
                <property>autopilot/vn-212/from-to</property>
                <value>1</value>
            </binding>
            <binding>
                <condition>
                    <property>autopilot/vn-212/serviceable</property>
                    <equals>
                        <property>autopilot/vn-212/select</property>
                        <value>1</value>
                    </equals>
                </condition>
                <command>property-adjust</command>
                <property>autopilot/vn-212/station-distance-nm</property>
                <factor>0.1</factor>
                <min>0.0</min>
                <max>99.9</max>
                <wrap>false</wrap>
            </binding>

            <binding>
                <condition>
                    <property>autopilot/vn-212/serviceable</property>
                    <equals>
                        <property>autopilot/vn-212/select</property>
                        <value>2</value>
                    </equals>
                </condition>
                <command>property-assign</command>
                <property>autopilot/vn-212/from-to</property>
                <value>-1</value>
            </binding>
            <binding>
                <condition>
                    <property>autopilot/vn-212/serviceable</property>
                    <equals>
                        <property>autopilot/vn-212/select</property>
                        <value>2</value>
                    </equals>
                </condition>
                <command>property-adjust</command>
                <property>autopilot/vn-212/station-distance-nm</property>
                <factor>0.1</factor>
                <min>0.0</min>
                <max>99.9</max>
                <wrap>false</wrap>
            </binding>

            <binding>
                <condition>
                    <property>autopilot/vn-212/serviceable</property>
                    <equals>
                        <property>autopilot/vn-212/select</property>
                        <value>3</value>
                    </equals>
                </condition>
                <command>property-adjust</command>
                <property>autopilot/vn-212/station-elevation-ft</property>
                <factor>100</factor>
                <min>0</min>
                <max>50000</max>
                <wrap>false</wrap>
            </binding>

            <binding>
                <condition>
                    <property>autopilot/vn-212/serviceable</property>
                    <equals>
                        <property>autopilot/vn-212/select</property>
                        <value>4</value>
                    </equals>
                </condition>
                <command>property-adjust</command>
                <property>autopilot/vn-212/altitude-select</property>
                <factor>100</factor>
                <min>500</min>
                <max>50000</max>
                <wrap>false</wrap>
            </binding>
            <binding>
                <condition>
                    <property>autopilot/vn-212/serviceable</property>
                    <equals>
                        <property>autopilot/vn-212/select</property>
                        <value>4</value>
                    </equals>
                </condition>
                <command>property-assign</command>
                <property>autopilot/vn-212/station-elevation-ft</property>
                <value>-100</value>
            </binding>

        </action>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>dim</object-name>
        <property>controls/lighting/altitude-alerter-dim</property>
        <factor>300</factor>
        <axis>
            <object-name>dim.axis</object-name>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>controls/lighting/altitude-alerter-dim</property>
                <factor>0.04</factor>
                <min>0</min>
                <max>1</max>
                <wrap>false</wrap>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>altimeter-dim</tooltip-id>
                <label>Dimming: %d%%</label>
                <mapping>percent</mapping>
                <property>controls/lighting/altitude-alerter-dim</property>
            </binding>
        </hovered>
    </animation>

<!-- Panel Lights (only for quality-level=0) -->
    <animation>
        <type>material</type>
        <condition>
            <equals>
                <property>/sim/rendering/shaders/quality-level</property>
                <value>0</value>
            </equals>
        </condition>
        <object-name>bezel</object-name>
        <object-name>mode.select</object-name>
        <object-name>mode.set</object-name>
        <object-name>dim</object-name>
        <emission>
            <red>1.0</red>
            <green>0.8</green>
            <blue>0.6</blue>
            <factor-prop>controls/lighting/panel-average-lighting</factor-prop>
        </emission>
    </animation>

<!-- dimmable lights -->
    <animation>
        <type>material</type>
        <object-name>alt.digit1</object-name>
        <object-name>alt.digit10</object-name>
        <object-name>alt.digit100</object-name>
        <object-name>stael.digit1</object-name>
        <object-name>stael.digit10</object-name>
        <object-name>stael.digit100</object-name>
        <object-name>to.digit1</object-name>
        <object-name>to.digit10</object-name>
        <object-name>to.digit100</object-name>
        <object-name>from.digit1</object-name>
        <object-name>from.digit10</object-name>
        <object-name>from.digit100</object-name>
        <object-name>vang.digit1</object-name>
        <object-name>vang.digit10</object-name>
        <object-name>vang.minus</object-name>
        <object-name>dash</object-name>
        <object-name>decimal</object-name>
        <emission>
            <red>1.0</red>
            <green>1.0</green>
            <blue>1.0</blue>
            <factor-prop>controls/lighting/altitude-alerter-dim</factor-prop>
        </emission>
    </animation>

    <effect>
        <inherits-from>/Models/Effects/flightdeck-glass</inherits-from>
        <object-name>glass</object-name>
    </effect>

    <!--effect>
        <inherits-from>Aircraft/Citation/Models/Effects/flightdeck-shadow</inherits-from>
        <object-name>bezel</object-name>
        <object-name>mode.select</object-name>
        <object-name>mode.set</object-name>
        <object-name>dim</object-name>
    </effect-->

</PropertyList>
