<?xml version='1.0' encoding='utf-8'?>
<PropertyList>

<!-- attitude -->

    <filter>
        <name>spin</name>
        <debug>false</debug>
        <type>gain</type>
        <input>
            <condition>
                <greater-than>
                    <property>systems/electrical/outputs/AC-26V/ac-adi1</property>
                    <value>18</value>
                </greater-than>
                <greater-than>
                    <property>instrumentation/attitude-indicator[0]/spin</property>
                    <value>0.7</value>
                </greater-than>
            </condition>
            <property>instrumentation/attitude-indicator[0]/spin</property>
        </input>
        <input>0.0</input>
        <output>instrumentation/AD600[0]/spin</output>
    </filter>

    <filter>
        <name>spin</name>
        <debug>false</debug>
        <type>gain</type>
        <input>
            <condition>
                <greater-than>
                    <property>systems/electrical/outputs/AC-26V/ac-adi2</property>
                    <value>18</value>
                </greater-than>
                <greater-than>
                    <property>instrumentation/attitude-indicator[1]/spin</property>
                    <value>0.7</value>
                </greater-than>
            </condition>
            <property>instrumentation/attitude-indicator[1]/spin</property>
        </input>
        <input>0.0</input>
        <output>instrumentation/AD600[1]/spin</output>
    </filter>

<!-- Flight Director -->

    <filter>
        <name>fd-on</name>
        <debug>false</debug>
        <type>gain</type>
        <input>
            <condition>
                <or>
                    <less-than>
                        <property>systems/electrical/outputs/AC-26V/ac-adi1</property>
                        <value>18</value>
                    </less-than>
                    <equals>
                        <property>autopilot/ms-205[0]/mode/state</property>
                        <value>-1</value>
                    </equals>
                    <equals>
                        <property>autopilot/ms-205[0]/mode/state</property>
                        <value>2</value>
                    </equals>
                </or>
            </condition>
            <value>0</value>
        </input>
        <input>1</input>
        <output>instrumentation/AD600[0]/fd-on</output>
    </filter>

    <filter>
        <name>fd-roll</name>
        <debug>false</debug>
        <type>exponential</type>
        <filter-time>0.1</filter-time>
        <input>
            <condition>
                <greater-than>
                    <property>systems/electrical/outputs/AC-26V/ac-adi2</property>
                    <value>18</value>
                </greater-than>
                <equals>
                    <property>autopilot/mode/selected-source</property>
                    <value>0</value>
                </equals>
            </condition>
            <expression>
                <dif>
                    <property>autopilot/ms-205[0]/command/roll-deg-stick</property>
                    <property>instrumentation/attitude-indicator[0]/indicated-roll-deg</property>
                </dif>
            </expression>
        </input>
        <input>
            <condition>
                <greater-than>
                    <property>systems/electrical/outputs/AC-26V/ac-adi2</property>
                    <value>18</value>
                </greater-than>
                <equals>
                    <property>autopilot/mode/selected-source</property>
                    <value>1</value>
                </equals>
            </condition>
            <expression>
                <dif>
                    <property>autopilot/ms-205[1]/command/roll-deg-stick</property>
                    <property>instrumentation/attitude-indicator[0]/indicated-roll-deg</property>
                </dif>
            </expression>
        </input>
        <input>0.0</input>
        <min>-45</min>
        <max>45</max>
        <output>instrumentation/AD600[0]/fd-roll-deg</output>
    </filter>

