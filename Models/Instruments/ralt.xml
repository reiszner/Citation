<PropertyList>

	<path>ralt.ac</path>

	<animation>
		<type>select</type>
		<object-name>ralt.dh.off</object-name>
		<condition>
			<or>
				<not><property>systems/electrical/outputs/main-left-xover/dc-radalt</property></not>
				<greater-than>
					<property>position/altitude-agl-ft</property>
					<property>instrumentation/altimeter/decision-height</property>
				</greater-than>
			</or>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>ralt.dh.on</object-name>
		<condition>
			<and>
				<property>systems/electrical/outputs/main-left-xover/dc-radalt</property>
				<less-than>
					<property>position/altitude-agl-ft</property>
					<property>instrumentation/altimeter/decision-height</property>
				</less-than>
			</and>
		</condition>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>ralt.flag</object-name>
		<property>systems/electrical/outputs/main-left-xover/dc-radalt</property>
		<interpolation>
			<entry><ind>18</ind><dep>0</dep></entry>
			<entry><ind>20</ind><dep>30</dep></entry>
		</interpolation>
		<center>
			<x-m>0.0025</x-m>
			<y-m>0.0240</y-m>
			<z-m>0.0240</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>ralt.bug</object-name>
		<property>instrumentation/altimeter/decision-height</property>
		<interpolation>
			<entry><ind>0.0</ind><dep>0</dep></entry>
			<entry><ind>500</ind><dep>180.0</dep></entry>
			<entry><ind>1000</ind><dep>207.0</dep></entry>
		</interpolation>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>ralt.needle</object-name>
		<property>instrumentation/radar-altimeter/radar-altitude-ft</property>
		<interpolation>
			<entry><ind>-25.0</ind><dep>-9.0</dep></entry>
			<entry><ind>0.0</ind><dep>0.0</dep></entry>
			<entry><ind>500.0</ind><dep>180.0</dep></entry>
			<entry><ind>2500.0</ind><dep>290.0</dep></entry>
			<entry><ind>3150.0</ind><dep>325.0</dep></entry>
		</interpolation>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

<!-- hotspots -->

	<animation>
		<type>pick</type>
		<object-name>ralt.knob</object-name>
		<action>
			<button>0</button>
			<repeatable>true</repeatable>
			<interval-sec>0.2</interval-sec>
			<binding>
				<condition>
					<greater-than>
						<property>instrumentation/altimeter/decision-height</property>
						<value>495</value>
					</greater-than>
				</condition>
				<command>property-adjust</command>
				<property>instrumentation/altimeter/decision-height</property>
				<step>100</step>
				<min>0</min>
				<max>1000</max>
				<wrap>false</wrap>
			</binding>
			<binding>
				<condition>
					<less-than>
						<property>instrumentation/altimeter/decision-height</property>
						<value>495</value>
					</less-than>
				</condition>
				<command>property-adjust</command>
				<property>instrumentation/altimeter/decision-height</property>
				<step>10</step>
				<min>0</min>
				<max>1000</max>
				<wrap>false</wrap>
			</binding>
		</action>

		<action>
			<button>1</button>
			<repeatable>true</repeatable>
			<interval-sec>0.2</interval-sec>
			<binding>
				<condition>
					<less-than>
						<property>instrumentation/altimeter/decision-height</property>
						<value>505</value>
					</less-than>
				</condition>
				<command>property-adjust</command>
				<property>instrumentation/altimeter/decision-height</property>
				<step>-10</step>
				<min>0</min>
				<max>1000</max>
				<wrap>false</wrap>
			</binding>
			<binding>
				<condition>
					<greater-than>
						<property>instrumentation/altimeter/decision-height</property>
						<value>505</value>
					</greater-than>
				</condition>
				<command>property-adjust</command>
				<property>instrumentation/altimeter/decision-height</property>
				<step>-100</step>
				<min>0</min>
				<max>1000</max>
				<wrap>false</wrap>
			</binding>
		</action>

		<action>
			<button>3</button>
			<binding>
				<condition>
					<greater-than>
						<property>instrumentation/altimeter/decision-height</property>
						<value>495</value>
					</greater-than>
				</condition>
				<command>property-adjust</command>
				<property>instrumentation/altimeter/decision-height</property>
				<step>100</step>
				<min>0</min>
				<max>1000</max>
				<wrap>false</wrap>
			</binding>
			<binding>
				<condition>
					<less-than>
						<property>instrumentation/altimeter/decision-height</property>
						<value>495</value>
					</less-than>
				</condition>
				<command>property-adjust</command>
				<property>instrumentation/altimeter/decision-height</property>
				<step>10</step>
				<min>0</min>
				<max>1000</max>
				<wrap>false</wrap>
			</binding>
		</action>

		<action>
			<button>4</button>
			<binding>
				<condition>
					<less-than>
						<property>instrumentation/altimeter/decision-height</property>
						<value>505</value>
					</less-than>
				</condition>
				<command>property-adjust</command>
				<property>instrumentation/altimeter/decision-height</property>
				<step>-10</step>
				<min>0</min>
				<max>1000</max>
				<wrap>false</wrap>
			</binding>
			<binding>
				<condition>
					<greater-than>
						<property>instrumentation/altimeter/decision-height</property>
						<value>505</value>
					</greater-than>
				</condition>
				<command>property-adjust</command>
				<property>instrumentation/altimeter/decision-height</property>
				<step>-100</step>
				<min>0</min>
				<max>1000</max>
				<wrap>false</wrap>
			</binding>
		</action>

		<hovered>
			<binding>
				<command>set-tooltip</command>
				<tooltip-id>RAlt</tooltip-id>
				<label>Radio altitude: %d ft</label>
				<property>instrumentation/altimeter/decision-height</property>
			</binding>
		</hovered>
	</animation>

<!-- Panel Lights (only for quality-level=0) -->
	<animation>
		<type>material</type>
		<condition>
			<equals>
				<property>/sim/rendering/shaders/quality-level</property>
				<value>0</value>
			</equals>
		</condition>
		<object-name>ralt.bezel</object-name>
		<object-name>ralt.dh.off</object-name>
		<object-name>ralt.knob</object-name>
		<object-name>ralt.test</object-name>
		<emission>
			<red>1.0</red>
			<green>0.8</green>
			<blue>0.6</blue>
			<factor-prop>controls/lighting/panel-average-lighting</factor-prop>
		</emission>
	</animation>

<!-- Instrument Lights -->
	<animation>
		<type>material</type>
		<object-name>ralt.bug</object-name>
		<object-name>ralt.face</object-name>
		<object-name>ralt.flag</object-name>
		<object-name>ralt.needle</object-name>
		<emission>
			<red>1.0</red>
			<green>0.8</green>
			<blue>0.6</blue>
			<factor-prop>controls/lighting/instrument-light-emission</factor-prop>
		</emission>
	</animation>

	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>ralt.glass</object-name>
	</effect>

