  </animation>

  <animation>
    <type>rotate</type>
    <object-name>lighting.landing.right.sw</object-name>
    <property>controls/lighting/landing-light-switch[1]</property>
    <factor>40</factor>
    <center>
      <x-m>0.00225</x-m>
      <y-m>0.1219</y-m>
      <z-m>0.0048</z-m>
    </center>
    <axis>
      <x>0.0</x>
      <y>-1.0</y>
      <z>0.0</z>
    </axis>
  </animation>

  <animation>
    <type>knob</type>
    <object-name>lighting.flood.knob</object-name>
    <property>controls/lighting/flood-light-norm</property>
    <factor>300</factor>
    <center>
      <x-m>0.0045</x-m>
      <y-m>-0.1175</y-m>
      <z-m>0.0039</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>controls/lighting/flood-light-norm</property>
        <factor>0.02</factor>
        <min>0</min>
        <max>1</max>
        <wrap>false</wrap>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>lights-floodlight</tooltip-id>
        <label>Floodlight: %d%%</label>
        <mapping>percent</mapping>
        <property>controls/lighting/flood-light-norm</property>
      </binding>
    </hovered>
  </animation>

  <animation>
    <type>knob</type>
