<?xml version='1.0' encoding='utf-8'?>
<PropertyList>

  <path>lightingpanel.ac</path>

  <animation>
    <type>rotate</type>
    <object-name>lighting.light.sw</object-name>
    <property>controls/lighting/panel-lights-switch</property>
    <factor>40</factor>
    <center>
      <x-m>0.00225</x-m>
      <y-m>-0.0927</y-m>
      <z-m>0.0048</z-m>
    </center>
    <axis>
      <x>0.0</x>
      <y>-1.0</y>
      <z>0.0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>lighting.stdbygyro.sw</object-name>
    <property>controls/lighting/stdbygyro-switch</property>
    <factor>20</factor>
    <center>
      <x-m>0.00225</x-m>
      <y-m>0.0432</y-m>
      <z-m>0.0048</z-m>
    </center>
    <axis>
      <x>0.0</x>
      <y>-1.0</y>
      <z>0.0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>lighting.passenger.sw</object-name>
    <property>controls/lighting/passenger-switch</property>
    <factor>20</factor>
