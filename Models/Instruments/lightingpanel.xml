<!-- hotspots -->

  <animation>
    <type>pick</type>
    <object-name>lighting.light.sw</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-toggle</command>
        <property>controls/lighting/panel-lights-switch</property>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/sound/click</property>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>lights-panel</tooltip-id>
        <label>Panel lights: %s</label>
        <mapping>on-off</mapping>
        <property>controls/lighting/panel-lights-switch</property>
      </binding>
    </hovered>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>lighting.stdbygyro.sw</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <condition>
          <less-than>
            <property>controls/lighting/stdbygyro-switch</property>
            <value>1</value>
          </less-than>
        </condition>
        <command>property-toggle</command>
        <property>sim/sound/click</property>
      </binding>
      <binding>
        <command>property-adjust</command>
        <property>controls/lighting/stdbygyro-switch</property>
        <step>1</step>
        <min>-1</min>
        <max>1</max>
        <wrap>false</wrap>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>stdbygyro</tooltip-id>
        <label>Standby Gyro: %s</label>
        <mapping>nasal</mapping>
        <script>
          var modes = ['OFF', 'ON', 'Test'];
          return modes[arg[0]];
        </script>
        <property>controls/lighting/stdbygyro-switch</property>
      </binding>
    </hovered>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>lighting.stdbygyro.sw</object-name>
    <action>
      <button>1</button>
      <repeatable>false</repeatable>
      <binding>
        <condition>
          <greater-than>
            <property>controls/lighting/stdbygyro-switch</property>
