<!-- Panel Lights (only for =0) -->
    <animation>
        <type>material</type>
        <condition>
            <equals>
                <property>/sim/rendering/shaders/quality-level</property>
                <value>0</value>
            </equals>
        </condition>
        <object-name>lighting.panel</object-name>
        <object-name>lighting.flood.knob</object-name>
        <object-name>lighting.left.knob</object-name>
        <object-name>lighting.center.knob</object-name>
        <object-name>lighting.right.knob</object-name>
        <object-name>lighting.el.knob</object-name>
        <object-name>lighting.light.sw</object-name>
        <object-name>lighting.stdbygyro.sw</object-name>
        <object-name>lighting.passenger.sw</object-name>
        <object-name>lighting.beacon.sw</object-name>
        <object-name>lighting.landing.left.sw</object-name>
        <object-name>lighting.landing.right.sw</object-name>
        <emission>
            <red>1.0</red>
            <green>0.8</green>
            <blue>0.6</blue>
            <factor-prop>controls/lighting/panel-average-lighting</factor-prop>
        </emission>
    </animation>

