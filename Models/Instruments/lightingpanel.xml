    <center>
      <x-m>0.00225</x-m>
      <y-m>0.0825</y-m>
      <z-m>0.0048</z-m>
    </center>
    <axis>
      <x>0.0</x>
      <y>-1.0</y>
      <z>0.0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>lighting.landing.left.sw</object-name>
    <property>controls/lighting/landing-light-switch</property>
    <factor>40</factor>
    <center>
      <x-m>0.00225</x-m>
      <y-m>0.1022</y-m>
      <z-m>0.0048</z-m>
    </center>
    <axis>
      <x>0.0</x>
      <y>-1.0</y>
      <z>0.0</z>
