            <binding>
                <condition>
                    <and>
                        <property>instrumentation/ctl92/power-knob</property>
                        <or>
                            <and>
                                <equals>
                                    <property>instrumentation/ctl92/units</property>
                                    <value>1</value>
                                </equals>
                                <property>instrumentation/transponder[0]/inputs/knob-mode</property>
                            </and>
                            <and>
                                <equals>
                                    <property>instrumentation/ctl92/units</property>
                                    <value>2</value>
                                </equals>
                                <property>instrumentation/ctl92/active</property>
                                <property>instrumentation/transponder[1]/inputs/knob-mode</property>
                            </and>
                        </or>
                    </and>
                </condition>
                <command>nasal</command>
                <script><![CDATA[
                    var loDigit = getprop('instrumentation/transponder[0]/inputs/digit[0]') or 0;
                    var hiDigit = getprop('instrumentation/transponder[0]/inputs/digit[1]') or 0;
                    var offset = int(cmdarg().getNode('offset').getValue());
                    var decr = (offset < 0);
                    if ((decr and loDigit == 0) or (!decr and loDigit == 7)) {
                        hiDigit = math.mod(hiDigit + offset, 8);
                    }
                    loDigit = math.mod(loDigit + offset, 8);
                    setprop('instrumentation/transponder[0]/inputs/digit[0]', loDigit);
                    setprop('instrumentation/transponder[0]/inputs/digit[1]', hiDigit);
                ]]></script>
            </binding>
            <binding>
