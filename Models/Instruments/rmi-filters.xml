        <input>
            <condition>
                <and>
                    <greater-than>
                        <property>systems/electrical/outputs/main-left-xover/dc-rmi1</property>
                        <value>20</value>
                    </greater-than>
                    <equals>
                        <property>instrumentation/rmi[0]/single-needle/selected-input</property>
                        <value>ADF</value>
                    </equals>
                    <property>instrumentation/adf[0]/in-range</property>
                </and>
            </condition>
            <expression>
                <floor>
                    <sum>
                        <property>instrumentation/adf[0]/indicated-bearing-deg</property>
                        <value>0.5</value>
                    </sum>
                </floor>
            </expression>
        </input>

        <input>
            <condition>
                <and>
                    <greater-than>
                        <property>systems/electrical/outputs/main-left-xover/dc-rmi1</property>
                        <value>20</value>
                    </greater-than>
                    <equals>
                        <property>instrumentation/rmi[0]/single-needle/selected-input</property>
                        <value>VOR</value>
                    </equals>
                    <property>instrumentation/nav[0]/in-range</property>
                </and>
            </condition>
            <expression>
                <sum>
                    <dif>
                        <value>360</value>
                        <property>instrumentation/heading-indicator[0]/indicated-heading-deg</property>
                    </dif>
                    <floor>
                        <sum>
                            <property>instrumentation/nav[0]/radials/reciprocal-radial-deg</property>
                            <value>0.5</value>
                        </sum>
                    </floor>
                </sum>
            </expression>
        </input>

        <input>
            <condition>
                <and>
                    <greater-than>
                        <property>systems/electrical/outputs/main-left-xover/dc-rmi1</property>
                        <value>20</value>
                    </greater-than>
                    <greater-than>
                        <property>/sim/time/elapsed-sec</property>
                        <property>instrumentation/rmi[0]/single-needle/receive</property>
                    </greater-than>
                </and>
            </condition>
            <value>90.0</value>
        </input>

        <input>instrumentation/rmi[0]/single-needle/position-deg</input>

        <period>
            <min>-180</min>
            <max>180</max>
        </period>

        <output>instrumentation/rmi[0]/single-needle/position-deg</output>
    </filter>

