<?xml version='1.0' encoding='utf-8'?>
<PropertyList>

    <filter>
        <name>RMI1: heading</name>
        <debug>false</debug>
        <type>noise-spike</type>
        <max-rate-of-change>60</max-rate-of-change>
        <period>
            <min>-180</min>
            <max>180</max>
        </period>
        <input>
            <condition>
                <greater-than>
                    <property>systems/electrical/outputs/main-left-xover/dc-rmi1</property>
                    <value>20</value>
                </greater-than>
            </condition>
            <property>instrumentation/heading-indicator[0]/indicated-heading-deg</property>
        </input>
        <input>instrumentation/rmi[0]/heading-deg</input>
        <output>instrumentation/rmi[0]/heading-deg</output>
    </filter>

    <filter>
        <name>RMI1: single-stemmed needle last receive</name>
        <debug>false</debug>
        <type>gain</type>
        <input>
            <condition>
                <greater-than>
                    <property>systems/electrical/outputs/main-left-xover/dc-rmi1</property>
                    <value>20</value>
                </greater-than>
                <or>
                    <and>
                        <equals>
                            <property>instrumentation/rmi[0]/single-needle/selected-input</property>
                            <value>ADF</value>
                        </equals>
                        <property>instrumentation/adf[0]/in-range</property>
                    </and>
                    <and>
                        <equals>
                            <property>instrumentation/rmi[0]/single-needle/selected-input</property>
                            <value>VOR</value>
                        </equals>
                        <property>instrumentation/nav[0]/in-range</property>
                    </and>
                </or>
            </condition>
            <expression>
                <sum>
                    <property>/sim/time/elapsed-sec</property>
                    <value>1.5</value>
                </sum>
            </expression>
        </input>
        <input>instrumentation/rmi[0]/single-needle/receive</input>
        <output>instrumentation/rmi[0]/single-needle/receive</output>
    </filter>

    <filter>
        <name>RMI1: single-stemmed needle: select source with filter</name>
        <debug>false</debug>
        <type>noise-spike</type>
