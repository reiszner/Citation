<PropertyList>

    <filter>
        <type>gain</type>
        <name>ctl32-nav0-power</name>
        <input>
            <condition>
                <greater-than>
                    <property>instrumentation/ctl32[0]/power-knob</property>
                    <value>0</value>
                </greater-than>
            </condition>
            <value>1</value>
        </input>
        <input>0</input>
        <output>instrumentation/nav[0]/power-btn</output>
    </filter>

    <filter>
        <type>gain</type>
        <name>ctl32-nav0-reset</name>
        <enable>
            <condition>
                <not><property>instrumentation/nav[0]/operable</property></not>
            </condition>
        </enable>
        <input>0</input>
        <output>
            <property>instrumentation/ctl32[0]/mode</property>
            <property>instrumentation/ctl32[0]/mem-mode</property>
            <property>instrumentation/ctl32[0]/mem-pos</property>
            <property>instrumentation/ctl32[0]/mem-run</property>
            <property>instrumentation/ctl32[0]/mem-khz[0]</property>
            <property>instrumentation/ctl32[0]/mem-mhz[0]</property>
            <property>instrumentation/ctl32[0]/mem-khz[1]</property>
            <property>instrumentation/ctl32[0]/mem-mhz[1]</property>
            <property>instrumentation/ctl32[0]/mem-khz[2]</property>
            <property>instrumentation/ctl32[0]/mem-mhz[2]</property>
            <property>instrumentation/ctl32[0]/mem-khz[3]</property>
            <property>instrumentation/ctl32[0]/mem-mhz[3]</property>
            <property>instrumentation/ctl32[0]/mem-khz[4]</property>
            <property>instrumentation/ctl32[0]/mem-mhz[4]</property>
            <property>instrumentation/ctl32[0]/mem-khz[5]</property>
            <property>instrumentation/ctl32[0]/mem-mhz[5]</property>
            <property>instrumentation/ctl32[0]/standby-mhz</property>
            <property>instrumentation/ctl32[0]/standby-khz</property>
            <property>instrumentation/ctl32[0]/standby-trigger</property>
            <property>instrumentation/ctl32[0]/selected-mhz</property>
            <property>instrumentation/ctl32[0]/selected-khz</property>
            <property>instrumentation/ctl32[0]/selected-trigger</property>
        </output>
    </filter>

    <filter>
        <type>gain</type>
        <name>ctl32-nav0-standby-mhz</name>
        <enable>
            <condition>
                <property>instrumentation/nav[0]/operable</property>
                <less-than>
                    <property>instrumentation/ctl32[0]/standby-mhz</property>
                    <value>108</value>
                </less-than>
            </condition>
        </enable>
        <input>108</input>
        <output>
            <property>instrumentation/ctl32[0]/standby-mhz</property>
            <property>instrumentation/ctl32[0]/mem-mhz[0]</property>
            <property>instrumentation/ctl32[0]/mem-mhz[1]</property>
            <property>instrumentation/ctl32[0]/mem-mhz[2]</property>
            <property>instrumentation/ctl32[0]/mem-mhz[3]</property>
            <property>instrumentation/ctl32[0]/mem-mhz[4]</property>
            <property>instrumentation/ctl32[0]/mem-mhz[5]</property>
        </output>
    </filter>

    <filter>
        <type>gain</type>
        <name>ctl32-nav0-standby</name>
        <enable>
            <condition>
                <property>instrumentation/nav[0]/operable</property>
            </condition>
        </enable>
        <input>
            <expression>
                <sum>
                    <product>
                        <property>instrumentation/ctl32[0]/standby-mhz</property>
                        <value>1000</value>
                    </product>
                    <property>instrumentation/ctl32[0]/standby-khz</property>
                </sum>
            </expression>
        </input>
        <output>instrumentation/ctl32[0]/standby</output>
    </filter>

    <filter>
        <type>gain</type>
        <name>ctl32-nav0-standby-push</name>
        <enable>
            <condition>
                <property>instrumentation/nav[0]/operable</property>
                <greater-than>
                    <property>instrumentation/ctl32[0]/standby-trigger</property>
                    <value>1.0</value>
                </greater-than>
            </condition>
        </enable>
        <input>
            <expression>
                <product>
                    <property>instrumentation/ctl32[0]/standby</property>
                    <value>0.001</value>
                </product>
            </expression>
        </input>
        <output>instrumentation/nav[0]/frequencies/standby-mhz</output>
    </filter>

    <filter>
        <type>gain</type>
        <name>ctl32-nav0-standby-trigger</name>
        <enable>
            <condition>
                <greater-than>
                    <property>instrumentation/ctl32[0]/standby-trigger</property>
                    <value>1.0</value>
                </greater-than>
                <greater-than>
                    <property>sim/time/elapsed-sec</property>
                    <expression>
                        <sum>
                            <property>instrumentation/ctl32[0]/standby-trigger</property>
                            <value>0.5</value>
                        </sum>
                    </expression>
                </greater-than>
            </condition>
        </enable>
        <input>0.0</input>
        <output>instrumentation/ctl32[0]/standby-trigger</output>
    </filter>

    <filter>
        <type>gain</type>
        <name>ctl32-nav0-standby-pull-mhz</name>
        <enable>
            <condition>
                <property>instrumentation/nav[0]/operable</property>
                <not-equals>
                    <expression>
                        <floor>
                            <sum>
                                <product>
                                    <property>instrumentation/nav[0]/frequencies/standby-mhz</property>
                                    <value>1000.0</value>
                                </product>
                                <value>0.5</value>
                            </sum>
                        </floor>
                    </expression>
                    <property>instrumentation/ctl32[0]/standby</property>
                </not-equals>
                <less-than>
                    <property>instrumentation/ctl32[0]/standby-trigger</property>
                    <value>1.0</value>
                </less-than>
            </condition>
        </enable>
        <input>
            <expression>
                <floor>
                    <sum>
                        <property>instrumentation/nav[0]/frequencies/standby-mhz</property>
                        <value>0.0005</value>
                    </sum>
                </floor>
            </expression>
        </input>
        <output>instrumentation/ctl32[0]/standby-mhz</output>
    </filter>

    <filter>
        <type>gain</type>
        <name>ctl32-nav0-standby-pull-khz</name>
        <enable>
            <condition>
                <property>instrumentation/nav[0]/operable</property>
                <not-equals>
                    <expression>
                        <floor>
                            <sum>
                                <product>
                                    <property>instrumentation/nav[0]/frequencies/standby-mhz</property>
                                    <value>1000.0</value>
                                </product>
                                <value>0.5</value>
                            </sum>
                        </floor>
                    </expression>
                    <property>instrumentation/ctl32[0]/standby</property>
                </not-equals>
                <less-than>
                    <property>instrumentation/ctl32[0]/standby-trigger</property>
                    <value>1.0</value>
                </less-than>
            </condition>
        </enable>
        <input>
            <expression>
                <mod>
                    <floor>
                        <sum>
                            <product>
                                <property>instrumentation/nav[0]/frequencies/standby-mhz</property>
                                <value>1000.0</value>
                            </product>
                            <value>0.5</value>
                        </sum>
                    </floor>
                    <value>1000</value>
                </mod>
            </expression>
        </input>
        <output>instrumentation/ctl32[0]/standby-khz</output>
    </filter>



    <filter>
        <type>gain</type>
        <name>ctl32-nav0-selected-mhz</name>
        <enable>
            <condition>
                <property>instrumentation/nav[0]/operable</property>
                <less-than>
                    <property>instrumentation/ctl32[0]/selected-mhz</property>
                    <value>108</value>
                </less-than>
            </condition>
        </enable>
        <input>108</input>
        <output>instrumentation/ctl32[0]/selected-mhz</output>
    </filter>

    <filter>
        <type>gain</type>
        <name>ctl32-nav0-selected</name>
        <enable>
            <condition>
                <property>instrumentation/nav[0]/operable</property>
            </condition>
        </enable>
        <input>
            <expression>
                <sum>
                    <product>
                        <property>instrumentation/ctl32[0]/selected-mhz</property>
                        <value>1000</value>
                    </product>
                    <property>instrumentation/ctl32[0]/selected-khz</property>
                </sum>
            </expression>
        </input>
        <output>instrumentation/ctl32[0]/selected</output>
    </filter>

    <filter>
        <type>gain</type>
        <name>ctl32-nav0-selected-push</name>
        <enable>
            <condition>
                <property>instrumentation/nav[0]/operable</property>
                <greater-than>
                    <property>instrumentation/ctl32[0]/selected-trigger</property>
                    <value>1.0</value>
                </greater-than>
            </condition>
        </enable>
        <input>
            <expression>
                <product>
                    <property>instrumentation/ctl32[0]/selected</property>
                    <value>0.001</value>
                </product>
            </expression>
        </input>
        <output>instrumentation/nav[0]/frequencies/selected-mhz</output>
    </filter>

    <filter>
        <type>gain</type>
        <name>ctl32-nav0-selected-trigger</name>
        <enable>
            <condition>
                <greater-than>
                    <property>instrumentation/ctl32[0]/selected-trigger</property>
                    <value>1.0</value>
                </greater-than>
                <greater-than>
                    <property>sim/time/elapsed-sec</property>
                    <expression>
                        <sum>
                            <property>instrumentation/ctl32[0]/selected-trigger</property>
                            <value>0.5</value>
                        </sum>
                    </expression>
                </greater-than>
            </condition>
        </enable>
        <input>0.0</input>
        <output>instrumentation/ctl32[0]/selected-trigger</output>
    </filter>

    <filter>
        <type>gain</type>
        <name>ctl32-nav0-selected-pull-mhz</name>
        <enable>
            <condition>
                <property>instrumentation/nav[0]/operable</property>
                <not-equals>
                    <expression>
                        <floor>
                            <sum>
                                <product>
                                    <property>instrumentation/nav[0]/frequencies/selected-mhz</property>
                                    <value>1000.0</value>
                                </product>
                                <value>0.5</value>
                            </sum>
                        </floor>
                    </expression>
                    <property>instrumentation/ctl32[0]/selected</property>
                </not-equals>
                <less-than>
                    <property>instrumentation/ctl32[0]/selected-trigger</property>
                    <value>1.0</value>
                </less-than>
            </condition>
        </enable>
        <input>
            <expression>
                <floor>
                    <sum>
                        <property>instrumentation/nav[0]/frequencies/selected-mhz</property>
                        <value>0.0005</value>
                    </sum>
                </floor>
            </expression>
        </input>
        <output>instrumentation/ctl32[0]/selected-mhz</output>
    </filter>

    <filter>
        <type>gain</type>
        <name>ctl32-nav0-selected-pull-khz</name>
        <enable>
            <condition>
                <property>instrumentation/nav[0]/operable</property>
                <not-equals>
                    <expression>
                        <floor>
                            <sum>
                                <product>
                                    <property>instrumentation/nav[0]/frequencies/selected-mhz</property>
                                    <value>1000.0</value>
                                </product>
                                <value>0.5</value>
                            </sum>
                        </floor>
                    </expression>
                    <property>instrumentation/ctl32[0]/selected</property>
                </not-equals>
                <less-than>
                    <property>instrumentation/ctl32[0]/selected-trigger</property>
                    <value>1.0</value>
                </less-than>
            </condition>
        </enable>
        <input>
            <expression>
                <mod>
                    <floor>
                        <sum>
                            <product>
                                <property>instrumentation/nav[0]/frequencies/selected-mhz</property>
                                <value>1000.0</value>
                            </product>
                            <value>0.5</value>
                        </sum>
                    </floor>
                    <value>1000</value>
                </mod>
            </expression>
        </input>
        <output>instrumentation/ctl32[0]/selected-khz</output>
    </filter>

    <filter>
        <type>gain</type>
        <name>ctl32-nav0-dme</name>
        <enable>
            <condition>
                <equals>
                    <property>instrumentation/ctl32[0]/power-knob</property>
                    <value>1</value>
                </equals>
                <not-equals>
                    <property>instrumentation/nav[0]/frequencies/selected-mhz</property>
                    <property>instrumentation/dme[0]/frequencies/selected-mhz</property>
                </not-equals>
            </condition>
        </enable>
        <input>instrumentation/nav[0]/frequencies/selected-mhz</input>
        <output>instrumentation/dme[0]/frequencies/selected-mhz</output>
    </filter>

<!-- toggle -->

    <filter>
        <type>gain</type>
        <name>ctl32-nav0-toggle-run-start</name>
        <enable>
            <condition>
                <property>instrumentation/ctl32[0]/toggle</property>
                <equals>
                    <property>instrumentation/ctl32[0]/toggle-run</property>
                    <value>0.0</value>
                </equals>
            </condition>
        </enable>
        <input>
            <expression>
                <sum>
                    <property>sim/time/elapsed-sec</property>
                    <value>0.3</value>
                </sum>
            </expression>
        </input>
        <output>instrumentation/ctl32[0]/toggle-run</output>
    </filter>

    <filter>
        <type>gain</type>
        <name>ctl32-nav0-toggle-run-stop</name>
        <enable>
            <condition>
                <property>instrumentation/ctl32[0]/toggle</property>
                <greater-than>
                    <property>sim/time/elapsed-sec</property>
                    <property>instrumentation/ctl32[0]/toggle-run</property>
                </greater-than>
            </condition>
        </enable>
        <input>0.0</input>
        <output>instrumentation/ctl32[0]/toggle</output>
        <output>instrumentation/ctl32[0]/toggle-run</output>
    </filter>

<!-- memory  -->

    <filter>
        <type>gain</type>
        <name>ctl32-nav0-memory-run-start</name>
        <enable>
            <condition>
                <property>instrumentation/ctl32[0]/mem-mode</property>
                <equals>
                    <property>instrumentation/ctl32[0]/mem-run</property>
                    <value>0.0</value>
                </equals>
            </condition>
        </enable>
        <input>sim/time/elapsed-sec</input>
        <output>instrumentation/ctl32[0]/mem-run</output>
    </filter>

    <filter>
        <type>gain</type>
        <name>ctl32-nav0-mem-clear</name>
        <enable>
            <condition>
                <greater-than>
                    <property>sim/time/elapsed-sec</property>
                    <expression>
                        <sum>
                            <property>instrumentation/ctl32[0]/mem-run</property>
                            <value>5.0</value>
                        </sum>
                    </expression>
                </greater-than>
            </condition>
        </enable>
        <input>0</input>
        <output>instrumentation/ctl32[0]/mem-mode</output>
        <output>instrumentation/ctl32[0]/mem-run</output>
    </filter>

</PropertyList>
