<PropertyList>

    <path>APpanel.ac</path>

    <animation>
        <type>select</type>
        <object-name>engage.on</object-name>
        <condition>
            <or>
                <property>autopilot/mode/engaged</property>
                <property>autopilot/mode/test</property>
            </or>
        </condition>
    </animation>
    <animation>
        <type>select</type>
        <object-name>engage.off</object-name>
        <condition>
            <not><property>autopilot/mode/engaged</property></not>
            <not><property>autopilot/mode/test</property></not>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>yaw-damper.on</object-name>
        <condition>
            <or>
                <property>autopilot/mode/yaw-damper</property>
                <property>autopilot/mode/test</property>
            </or>
        </condition>
    </animation>
    <animation>
        <type>select</type>
        <object-name>yaw-damper.off</object-name>
        <condition>
            <not><property>autopilot/mode/yaw-damper</property></not>
            <not><property>autopilot/mode/test</property></not>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>low-bank.on</object-name>
        <condition>
            <or>
                <property>autopilot/mode/low-bank</property>
                <property>autopilot/mode/test</property>
            </or>
        </condition>
    </animation>
    <animation>
        <type>select</type>
        <object-name>low-bank.off</object-name>
        <condition>
            <not><property>autopilot/mode/low-bank</property></not>
            <not><property>autopilot/mode/test</property></not>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>soft-ride.on</object-name>
        <condition>
            <or>
                <property>autopilot/mode/soft-ride</property>
                <property>autopilot/mode/test</property>
            </or>
        </condition>
    </animation>
    <animation>
        <type>select</type>
        <object-name>soft-ride.off</object-name>
        <condition>
            <not><property>autopilot/mode/soft-ride</property></not>
            <not><property>autopilot/mode/test</property></not>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>trim.up</object-name>
        <condition>
            <or>
                <property>autopilot/mode/trim-up</property>
                <property>autopilot/mode/test</property>
            </or>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>trim.dn</object-name>
        <condition>
            <or>
                <property>autopilot/mode/trim-dn</property>
                <property>autopilot/mode/test</property>
            </or>
        </condition>
    </animation>

<!-- hotspots -->
    <animation>
        <type>pick</type>
        <object-name>engage</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-assign</command>
                <property>autopilot/panel/engaged</property>
                <property>/sim/time/elapsed-sec</property>
            </binding>
            <binding>
                <condition>
                    <property>autopilot/mode/serviceable</property>
                    <or>
                        <property>autopilot/mode/engaged</property>
                        <and>
                            <not><property>autopilot/mode/engaged</property></not>
                            <greater-than>
                                <property>autopilot/mode/turn-knob</property>
                                <value>-0.4</value>
                            </greater-than>
                            <less-than>
                                <property>autopilot/mode/turn-knob</property>
                                <value>0.4</value>
                            </less-than>
                        </and>
                    </or>
                </condition>
                <command>property-toggle</command>
                <property>autopilot/mode/engaged</property>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>autopilot/panel/engaged</property>
                    <value>0</value>
                </binding>
            </mod-up>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>yaw-damper</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-assign</command>
                <property>autopilot/panel/yaw-damper</property>
                <property>/sim/time/elapsed-sec</property>
            </binding>
            <binding>
                <condition>
                    <property>autopilot/mode/serviceable</property>
                </condition>
                <command>property-toggle</command>
                <property>autopilot/mode/yaw-damper</property>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>autopilot/panel/yaw-damper</property>
                    <value>0</value>
                </binding>
            </mod-up>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>low-bank</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-assign</command>
                <property>autopilot/panel/low-bank</property>
                <property>/sim/time/elapsed-sec</property>
            </binding>
            <binding>
                <condition>
                    <property>autopilot/mode/serviceable</property>
                </condition>
                <command>property-toggle</command>
                <property>autopilot/mode/low-bank</property>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>autopilot/panel/low-bank</property>
                    <value>0</value>
                </binding>
            </mod-up>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>soft-ride</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-assign</command>
                <property>autopilot/panel/soft-ride</property>
                <property>/sim/time/elapsed-sec</property>
            </binding>
            <binding>
                <condition>
                    <property>autopilot/mode/serviceable</property>
                </condition>
                <command>property-toggle</command>
                <property>autopilot/mode/soft-ride</property>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>autopilot/panel/soft-ride</property>
                    <value>0</value>
                </binding>
            </mod-up>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>test-btn</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-assign</command>
                <property>autopilot/panel/test</property>
                <property>/sim/time/elapsed-sec</property>
            </binding>
            <binding>
                <condition>
                    <property>autopilot/mode/serviceable</property>
                </condition>
                <command>property-assign</command>
                <property>autopilot/mode/test</property>
                <value>1</value>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>autopilot/mode/test</property>
                    <value>0</value>
                </binding>
                <binding>
                    <command>property-assign</command>
                    <property>autopilot/panel/test</property>
                    <value>0</value>
                </binding>
            </mod-up>
        </action>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>engage</object-name>
        <property>autopilot/panel/engaged</property>
        <interpolation>
            <entry><ind>0.0</ind><dep>1.0</dep></entry>
            <entry><ind>1.0</ind><dep>0.0</dep></entry>
        </interpolation>
        <axis>
            <object-name>turn-knob.axis</object-name>
        </axis>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>yaw-damper</object-name>
        <property>autopilot/panel/yaw-damper</property>
        <interpolation>
            <entry><ind>0.0</ind><dep>1.0</dep></entry>
            <entry><ind>1.0</ind><dep>0.0</dep></entry>
        </interpolation>
        <axis>
            <object-name>turn-knob.axis</object-name>
        </axis>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>low-bank</object-name>
        <property>autopilot/panel/low-bank</property>
        <interpolation>
            <entry><ind>0.0</ind><dep>1.0</dep></entry>
            <entry><ind>1.0</ind><dep>0.0</dep></entry>
        </interpolation>
        <axis>
            <object-name>turn-knob.axis</object-name>
        </axis>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>soft-ride</object-name>
        <property>autopilot/panel/soft-ride</property>
        <interpolation>
            <entry><ind>0.0</ind><dep>1.0</dep></entry>
            <entry><ind>1.0</ind><dep>0.0</dep></entry>
        </interpolation>
        <axis>
            <object-name>turn-knob.axis</object-name>
        </axis>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>test-btn</object-name>
        <property>autopilot/panel/test</property>
        <interpolation>
            <entry><ind>0.0</ind><dep>1.0</dep></entry>
            <entry><ind>1.0</ind><dep>0.0</dep></entry>
        </interpolation>
        <axis>
            <object-name>turn-knob.axis</object-name>
        </axis>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>pitch-wheel</object-name>
        <drag-direction>vertical</drag-direction>
        <property>autopilot/mode/pitch-wheel</property>
        <factor>3</factor>
        <axis>
            <object-name>pitch-wheel.axis</object-name>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>autopilot/mode/pitch-wheel</property>
            </binding>
<!-- AP only -->
            <binding>
                <condition>
                    <property>autopilot/mode/engaged</property>
                    <equals>
                        <property>autopilot/mode/selected-source</property>
                        <value>-1</value>
                    </equals>
                </condition>
                <command>property-adjust</command>
                <property>autopilot/input/pitch-deg</property>
                <factor>-0.1</factor>
                <min>-20</min>
                <max>20</max>
            </binding>
<!-- FD1 -->
            <binding>
                <condition>
                    <property>autopilot/mode/engaged</property>
                    <equals>
                        <property>autopilot/mode/selected-source</property>
                        <value>0</value>
                    </equals>
                </condition>
                <command>property-adjust</command>
                <property>autopilot/ms-205[0]/target/pitch-deg</property>
                <factor>-0.1</factor>
                <min>-20</min>
                <max>20</max>
            </binding>
            <binding>
                <condition>
                    <property>autopilot/mode/engaged</property>
                    <equals>
                        <property>autopilot/mode/selected-source</property>
                        <value>0</value>
                    </equals>
                </condition>
                <command>property-adjust</command>
                <property>autopilot/ms-205[0]/target/vs-fpm</property>
                <factor>-100</factor>
                <min>-6000</min>
                <max>6000</max>
            </binding>
<!-- FD2 -->
            <binding>
                <condition>
                    <property>autopilot/mode/engaged</property>
                    <equals>
                        <property>autopilot/mode/selected-source</property>
                        <value>1</value>
                    </equals>
                </condition>
                <command>property-adjust</command>
                <property>autopilot/ms-205[1]/target/pitch-deg</property>
                <factor>-0.1</factor>
                <min>-20</min>
                <max>20</max>
            </binding>
            <binding>
                <condition>
                    <property>autopilot/mode/engaged</property>
                    <equals>
                        <property>autopilot/mode/selected-source</property>
                        <value>1</value>
                    </equals>
                </condition>
                <command>property-adjust</command>
                <property>autopilot/ms-205[1]/target/vs-fpm</property>
                <factor>-100</factor>
                <min>-6000</min>
                <max>6000</max>
            </binding>
        </action>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>turn-knob</object-name>
        <property>autopilot/mode/turn-knob</property>
        <axis>
            <object-name>turn-knob.axis</object-name>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>autopilot/mode/turn-knob</property>
                <factor>2</factor>
                <min>-120</min>
                <max>120</max>
            </binding>
        </action>
        <shift-action>
            <binding>
                <condition>
                    <greater-than>
                        <property>autopilot/mode/turn-knob</property>
                        <value>-9</value>
                    </greater-than>
                    <less-than>
                        <property>autopilot/mode/turn-knob</property>
                        <value>9</value>
                    </less-than>
                </condition>
                <command>property-assign</command>
                <property>autopilot/mode/turn-knob</property>
                <value>0</value>
            </binding>
        </shift-action>
    </animation>

<!-- Simulate ambient light from panel lights (only for quality-level=0) -->
    <animation>
        <type>material</type>
        <condition>
            <equals>
                <property>/sim/rendering/shaders/quality-level</property>
                <value>0</value>
            </equals>
        </condition>
        <object-name>bezel</object-name>
        <object-name>pitch-wheel</object-name>
        <object-name>turn-knob</object-name>
        <object-name>engage.btn</object-name>
        <object-name>engage.btn.off</object-name>
        <object-name>yaw-damper.btn</object-name>
        <object-name>yaw-damper.btn.off</object-name>
        <object-name>low-bank.btn</object-name>
        <object-name>low-bank.btn.off</object-name>
        <object-name>soft-ride.btn</object-name>
        <object-name>soft-ride.btn.off</object-name>
        <emission>
            <red>1.0</red>
            <green>0.8</green>
            <blue>0.6</blue>
            <factor-prop>controls/lighting/flightdeck-average-ambient-light-center-console</factor-prop>
        </emission>
    </animation>

