<?xml version="1.0"?>

<PropertyList>

  <filter>
    <type>gain</type>
    <input>
      <expression>
        <div>
          <property>engines/engine/fan</property>
          <value>2000</value>
        </div>
      </expression>
    </input>
    <output>engines/engine/heatblur/thrust_density</output>
  </filter>
  <filter>
    <type>gain</type>
    <input>
      <expression>
        <div>
          <property>engines/engine[1]/fan</property>
          <value>2000</value>
        </div>
      </expression>
    </input>
    <output>engines/engine[1]/heatblur/thrust_density</output>
  </filter>

  <filter>
    <type>gain</type>
    <input>
      <property>velocities/airspeed-kt</property>
      <min>0</min>
      <max>100</max>
    </input>
    <output>engines/engine/heatblur/airspeed-kt</output>
    <output>engines/engine[1]/heatblur/airspeed-kt</output>
  </filter>

  <filter>
    <type>gain</type>
    <input>
      <condition>
	<greater-than>
	  <property>engines/engine/fan</property>
	  <property>engines/engine/heatblur/airspeed-kt</property>
	</greater-than>
      </condition>
      <expression>
        <difference>
          <value>0.5</value>
          <div>
            <property>engines/engine/fan</property>
            <value>500</value>
          </div>
        </difference>
      </expression>
    </input>
    <input>
      <condition>
	<greater-than>
	  <property>engines/engine/heatblur/airspeed-kt</property>
	  <property>engines/engine/fan</property>
	</greater-than>
      </condition>
      <expression>
        <difference>
          <value>0.5</value>
          <div>
            <property>engines/engine/heatblur/airspeed-kt</property>
            <value>500</value>
          </div>
        </difference>
      </expression>
    </input>
    <output>engines/engine/heatblur/thrust_collimation</output>
  </filter>
  <filter>
    <type>gain</type>
    <input>
      <condition>
	<greater-than>
	  <property>engines/engine[1]/fan</property>
	  <property>engines/engine[1]/heatblur/airspeed-kt</property>
	</greater-than>
      </condition>
      <expression>
        <difference>
          <value>0.5</value>
          <div>
            <property>engines/engine[1]/fan</property>
            <value>500</value>
          </div>
        </difference>
      </expression>
    </input>
    <input>
      <condition>
	<greater-than>
	  <property>engines/engine[1]/heatblur/airspeed-kt</property>
	  <property>engines/engine[1]/fan</property>
	</greater-than>
      </condition>
      <expression>
        <difference>
          <value>0.5</value>
          <div>
            <property>engines/engine[1]/heatblur/airspeed-kt</property>
            <value>500</value>
          </div>
        </difference>
      </expression>
    </input>
    <output>engines/engine[1]/heatblur/thrust_collimation</output>
  </filter>

  <filter>
    <type>gain</type>
    <input>
      <expression>
        <sum>
          <div>
            <property>velocities/airspeed-kt</property>
            <value>1000</value>
          </div>
          <value>0.05</value>
        </sum>
      </expression>
    </input>
    <output>engines/engine/heatblur/noise_scale</output>
    <output>engines/engine[1]/heatblur/noise_scale</output>
  </filter>

  <filter>
    <type>gain</type>
    <input>
      <expression>
        <difference>
          <value>1</value>
          <div>
            <property>engines/engine/fan</property>
            <value>166.66666666</value>
          </div>
        </difference>
      </expression>
    </input>
    <output>engines/engine/heatblur/noise_strength</output>
  </filter>
  <filter>
    <type>gain</type>
    <input>
      <expression>
        <difference>
          <value>1</value>
          <div>
            <property>engines/engine[1]/fan</property>
            <value>166.66666666</value>
          </div>
        </difference>
      </expression>
    </input>
    <output>engines/engine[1]/heatblur/noise_strength</output>
  </filter>

</PropertyList>