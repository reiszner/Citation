<?xml version="1.0"?>

<PropertyList>

    <path>CenterPanel.ac</path>

    <animation>
        <type>select</type>
        <object-name>IntLight.CenterPanel.Cone</object-name>
        <condition>
            <and>
                <property>systems/electrical/outputs/battery-hot/light-emer</property>
                <or>
                    <and>
                        <or>
                            <property>controls/electric/engine[0]/starter</property>
                            <property>engines/engine[0]/started</property>
                        </or>
                        <not><property>engines/engine[1]/started</property></not>
                    </and>
                    <and>
                        <or>
                            <property>controls/electric/engine[1]/starter</property>
                            <property>engines/engine[1]/started</property>
                        </or>
                        <not><property>engines/engine[0]/started</property></not>
                    </and>
                </or>
                <less-than>
                    <property>controls/lighting/center-panel-light-emission</property>
                    <value>0.5</value>
                </less-than>
            </and>
        </condition>
    </animation>

    <animation>
	<type>light</type>
	<light-type>spot</light-type>
	<name>EngInstrLight</name>
        <object-name>IntLight.CenterPanel.Cone</object-name>
	<nopreview/>
	<position>
		<x>2.49712</x>
		<y>0.0</y>
		<z>0.77277</z>
	</position>
	<direction>
		<x>-0.1</x>
		<y>0.0</y>
		<z>-2</z>
	</direction>
	<ambient>
		<r>0.9</r>
		<g>0.7</g>
		<b>0.5</b>
		<a>1</a>
	</ambient>
	<diffuse>
		<r>0.7</r>
		<g>0.4</g>
		<b>0.3</b>
		<a>1</a>
	</diffuse>
	<specular>
		<r>0.7</r>
		<g>0.4</g>
		<b>0.3</b>
		<a>1</a>
	</specular>
	<dim-factor>
		<property>systems/electrical/outputs/battery-hot/light-emer</property>
		<factor>0.0125</factor>
		<offset>0</offset>
		<min>0</min>
		<max>0.3</max>
	</dim-factor>
	<attenuation>
		<c>0.0</c>
		<l>3</l>
		<q>50</q>
	</attenuation>
	<cutoff>70</cutoff>
	<near-m>0.001</near-m>
	<far-m>2</far-m>
    </animation>

</PropertyList>
