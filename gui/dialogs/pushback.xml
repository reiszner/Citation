<?xml version="1.0"?>
<PropertyList>

    <name>pushback</name>
    <layout>vbox</layout>

    <nasal>
        <open>
            setprop("/sim/model/pushback/enabled",1);
        </open>
        <close>
            setprop("/sim/model/pushback/enabled",0);
        </close>
    </nasal>

    <group>
        <layout>hbox</layout>
        <text>
            <label>Pushback</label>
        </text>

        <empty>
            <stretch>true</stretch>
        </empty>

        <button>
            <legend/>
            <key>Esc</key>
            <pref-width>16</pref-width>
            <pref-height>16</pref-height>
            <border>2</border>
            <binding>
                <command>dialog-close</command>
            </binding>
        </button>
    </group>

  <hrule/>

  <group>
    <stretch>true</stretch>
    <layout>vbox</layout>
    <halign>center</halign>
    <valign>top</valign>

    <checkbox>
      <halign>left</halign>
      <label>(Dis)Connect pushback</label>
      <property>sim/model/pushback/connect</property>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/pushback/connect</property>
      </binding>
    </checkbox>

    <group>
      <layout>table</layout>

      <text>
        <row>0</row>
        <col>0</col>
        <label>Steering:</label>
      </text>

      <slider>
        <row>0</row>
        <col>1</col>
        <min>-1</min>
        <max>1</max>
        <pref-width>100</pref-width>
        <!--property>sim/model/pushback/steering</property-->
        <property>sim/model/pushback/geometry/tug/steering</property>
        <binding>
          <command>dialog-apply</command>
        </binding>
        <live>true</live>
      </slider>

      <text>
        <row>0</row>
        <col>2</col>
        <halign>right</halign>
        <label>00.0</label>
        <format>%2.1f</format>
        <!--property>sim/model/pushback/steering-deg</property-->
        <property>sim/model/pushback/geometry/tug/steering</property>
        <live>true</live>
      </text>

      <text>
        <row>0</row>
        <col>3</col>
        <label>deg</label>
        <halign>left</halign>
      </text>

      <button>
        <row>0</row>
        <col>4</col>
        <pref-width>80</pref-width>
        <legend>Straight</legend>
        <binding>
          <command>property-assign</command>
          <!--property>sim/model/pushback/steering</property-->
          <property>sim/model/pushback/geometry/tug/steering</property>
          <value>0.0</value>
        </binding>
      </button>

      <text>
        <row>1</row>
        <col>0</col>
        <label>Speed:</label>
      </text>

      <slider>
        <row>1</row>
        <col>1</col>
        <min>-5</min>
        <max>5</max>
        <pref-width>100</pref-width>
        <property>sim/model/pushback/target-speed-kts</property>
        <binding>
          <command>dialog-apply</command>
        </binding>
        <live>true</live>
      </slider>

      <text>
        <row>1</row>
        <col>2</col>
        <halign>right</halign>
        <label>00.0</label>
        <format>%2.1f</format>
        <property>sim/model/pushback/target-speed-kts</property>
        <live>true</live>
      </text>

      <text>
        <row>1</row>
        <col>3</col>
        <label>kts</label>
        <halign>left</halign>
      </text>

      <button>
        <row>1</row>
        <col>4</col>
        <pref-width>80</pref-width>
        <legend>Stop</legend>
        <binding>
          <command>property-assign</command>
          <property>sim/model/pushback/target-speed-kts</property>
          <value>0.0</value>
        </binding>
      </button>

    </group>

  </group>
</PropertyList>
