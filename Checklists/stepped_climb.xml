<PropertyList>
  <title>V - Stepped Climb (Citation II only)</title>
  <item>
    <name>Climb to and hold</name>
    <value>33000 ft</value>
    <condition>
      <greater-than>
        <property>instrumentation/altimeter/indicated-altitude-ft</property>
        <value>33000</value>
      </greater-than>
    </condition>
    <binding>
      <command>property-assign</command>
      <property>autopilot/vn-212/altitude-select</property>
      <value>33000</value>
    </binding>
  </item>

  <!-- the angle of attack is indicated on a scale of 0.0 to 1.0
       corresponding to 0.0 to 14.0 degrees (see aoa.xml). -->
  <item>
    <name>Accelerate until angle of attack</name>
    <value>&lt; .3</value>
    <condition>
      <less-than>
        <property>orientation/alpha-deg</property>
        <value>4.2</value>
      </less-than>
    </condition>
  </item>
  <item>
    <name>Climb to and hold</name>
